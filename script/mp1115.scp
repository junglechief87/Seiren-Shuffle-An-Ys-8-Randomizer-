	DelMapMarker( SMI_SUBEVENT, PAGE_F012, MARKER_JOIN_REJA, 862.16f, -903.34f, 9.22f, 862.16f, -903.34f, MARKER_JOIN_REJA, MN_F_MP1115, -1)

