		WaitCloseWindow()
	}
	//	⇒それ以外
	else
	{
		TalkPopup("LAXIA",0,1,0,0,0)
		{
			"#000e#000mこれは……さっきの子が"
			"いた方角ですね……"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//────────────────────

	ChangeAnimation( "SAHAD", "ANI_EV_RYOTEKOSI_E", -1, 1 )	// 両手腰

	TalkPopup("SAHAD",0,1,0,0,0)
	{
		"#000e#000mお？　つーことは"
		"やっぱそうなのか……？"
	}
	WaitPrompt()
	WaitCloseWindow()
	
	//────────────────────
	//	⇒ヒュンメルがいる
	if( FLAG[SF_HUMMEL_JOINOK] )	// ヒュンメルがいる
	{
		TalkPopup("HUMMEL",0,1,0,0,0)
		{
			"#000e#000mフン、本人に"
			"確かめてみるのが早そうだな。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//	⇒それ以外
