	{
		TalkPopup("SAHAD",0,1,0,0,0)
		{
			"#000e#000mガハハ……こりゃあ本人に"
			"確かめてみるのが早そうだな。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//────────────────────

	//　　以下のイベントに接続。
	FadeOut(FADE_BLACK,FADE_NORMAL)
	WaitFade()

//終了処理ここから----------------------------------------------------
	CallFunc("mp1115:Join_Reja2_ED")
}
