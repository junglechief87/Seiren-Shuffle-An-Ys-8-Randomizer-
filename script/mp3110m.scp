// initスクリプト
function "init"
{
	
	if( FLAG[SF_EVENT_ON] )
	{
		// イベント発生制御

		// アクティブボイス
		if(!FLAG[GF_AVOICE_0302])
		{
			SetEventDriven(EED_TYPE_INEVBOX, 9, "mp3110m:act_0302")
		}
	}

}

//////////////////////////////////////////////////////////////////////
//■アクティブボイス
//////////////////////////////////////////////////////////////////////
function "act_0302"
{
	if (!FLAG[GF_AVOICE_0302])
	{
		ActiveVoiceStop(ACTIVEVOICESTOP_WINDOWOFF)
		ActiveVoiceStart(EACT_EVID_0302, 1, 0)	//大峡谷の風ギミック発動時
	}
}

