	// イベント制御
	EventAreaEnable( "ev2_EV_LOCATION019" , 0 )

	// イベント発生制御
	if( FLAG[SF_EVENT_ON] ){
		if( FLAG[GF_05MP6330_LOOK_MONOLITH] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] ){
