	CallFunc("mp1114:EV_LOCATION019_ED")
}
function "EV_LOCATION019_ED"
{
	//終了処理はスキップ禁止
	SetSkipScript("")

	ResetChrPos((CHRTYPE_MONS | RESET_POS))

	//フラグ
	SetFlag(GF_LOCATION19, 1)	//蜂塚

