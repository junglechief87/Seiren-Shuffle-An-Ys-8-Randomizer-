// init
function "init"
{
	
	// ショートカット１
	if(FLAG[GF_MP430x_GIM_01] )
	{
		// 開通状態に
		MapAnime( "gim01" , "wait2" )
		SetChrPos("lookp01",-100000.0f, 0.0f, 0.0f)
	}

	// ショートカット２
	if(FLAG[GF_MP430x_GIM_02] )
	{
		// 開通状態に
		MapAnime( "gim02" , "wait2" )
		SetChrPos("lookp02",-100000.0f, 0.0f, 0.0f)
	}
}

