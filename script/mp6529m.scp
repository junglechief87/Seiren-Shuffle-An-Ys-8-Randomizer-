// initスクリプト
function "init"
{
	//CallFunc("rng:expMult")				
	// ストッパー
	MapAnime("CA_EVENT_boss", "open")	//逃げられないストッパー開ける
	MapAnime("CT_EVENT_boss", "open")	//逃げられないストッパー開ける
//	MapAnime("syswall", "open")

	EventAreaEnable( "SubEV_Past_BossB2" , 0 )
	EventAreaEnable( "SubEV_Past_MonoLithB2" , 0 )

	if (FLAG[SF_BOSS_BATTLE])
	{
		SetWork(WK_BGM, BGM_Nothing)
		EventCue("mp6529m:EV_RetryBoss")
	}
	else if (FLAG[SF_EVENT_ON])
	{
		ChangeAnimation( "chkpt_dummy" , "ANI_STOP", -1 , 1 )

		// イベント発生制御
		if( !FLAG[GF_SUBEV_PAST_BOSS_B2] )							// 過去編Ⅲ：【サブイベント：地下聖堂フロア２・ボスが出現】を見た
		{
			SetWork( WK_BGM , BGM_Nothing )		//BGM消す
			EventAreaEnable("SubEV_Past_BossB2" , 1)				// 過去編Ⅲ：【サブイベント：地下聖堂フロア２・ボスが出現】
		}
		if( !FLAG[GF_SUBEV_PAST_OPEN_B3] )							// 過去編Ⅳ：【サブイベント：地下聖堂フロア２の大扉を開く】を見た	
		{
			SetChrPos("SubEV_Past_OpenB3",-0.027f , 430.744f , 13.031f)		// 過去編Ⅳ：【サブイベント：地下聖堂フロア２の大扉を開く】
		}
		if( !FLAG[GF_SUBEV_PAST_MONOLITH_B2] )						// 過去編Ⅲ：【サブイベント：地下聖堂フロア２のモノリスを見る】を見た	
		{
			//SetChrPos("SubEV_Past_MonoLithB2",0.024f , 404.842f , 12.607f )
			EventAreaEnable( "SubEV_Past_MonoLithB2" , 1 )
		}
		if( FLAG[GF_SUBEV_PAST_OPEN_B3] && !FLAG[GF_PAST_EPISODE_4_GO_CASTLE] && !FLAG[GF_PAST_EPISODE_5_GO_VALLAY] && !FLAG[GF_PAST_EPISODE_6_GO_GARDEN] && !FLAG[GF_PAST_EPISODE_7_ENDEPISODE])	// 過去編Ⅲ：【サブイベント：地下聖堂フロア２の大扉を開く】を見た
		{
			SetChrPos("SubEV_Past_OpenB3",-0.027f , 430.744f , 13.031f)		// 過去編Ⅳ：【サブイベント：地下聖堂フロア２の大扉を開く】
		}

		if(FLAG[GF_BOSSFLOOR_NUM] < 2 )		//転移装置アクティブ用
		{
			SetFlag(GF_BOSSFLOOR_NUM , 2)
		}
		
		//マップアニメ
		MapAnime("monoris_all" , "off_wait")	//モノリスOFF
		MapAnime("EVENT_monorisgate","close_off")			//初期閉鎖

		if( FLAG[GF_SUBEV_PAST_BOSS_B2] && !FLAG[GF_TBOX_DUMMY112])							// 過去編Ⅲ：【サブイベント：地下聖堂フロア２・ボスが出現】を見た
		{
			MapAnime("EVENT_bossgate","open")
			SetChrPos("TBOX01", 0.0f, 332.0f, 12.0f)
		}
		if(FLAG[GF_OPEN_FLOOR_03])									//第３階層が開く予知を見ている
		{
			MapAnime("EVENT_monorisgate","close_on_wait")			//点灯状態
		}
		if(FLAG[GF_SUBEV_PAST_OPEN_B3] && (FLAG[GF_PAST_EPISODE_4_GO_CASTLE] || FLAG[GF_PAST_EPISODE_5_GO_VALLAY] || FLAG[GF_PAST_EPISODE_6_GO_GARDEN] || FLAG[GF_PAST_EPISODE_7_ENDEPISODE]))	// 過去編Ⅵ：【サブイベント：地下聖堂フロア４の大扉を開く】を見た	且つ　過去編Ⅳ以降
		{
			MapAnime("EVENT_monorisgate","open")					//開放済
		}
	}
}

