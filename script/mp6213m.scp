function "init"
{
	CallFunc("rng:expMult")
	// イベントエリア設定制御
	EventAreaEnable( "Stopper_Past_04_04" , 0 )	// 過去編Ⅳ：【ストッパー：東街区→裏街道へ行けない】

	MapAnime( "door1" , "wait1" )
	MapAnime( "door1_atari" , "wait1" )

	if( FLAG[SF_EVENT_ON] )
	{
		//一般配置ファンクション呼び出し
		CallFunc("mp6213m:NpcPosition")

		if( FLAG[GF_SUBEV_PAST_02_GIMMICK_A] )		// 過去編Ⅱ：【過去ギミック②：鍵の話を聞く】のイベントを見た
		{
			//扉を開ける
			MapAnime( "door1" , "wait2" )
			MapAnime( "door1_atari" , "wait2" )
			SetChrPos("LP_Past_Warehouse", -100000.00f, 00.00f, 00.00f)	//ダーナ編③：【ＬＰ：衛士隊の倉庫】
		}

	}

	//サウンド制御
//	if (FLAG[GF_06MP6202M_GOTO_GARDEN] ){		// ６話以降
//		SetWork( WK_BGM , BGM_DUNGEON_902 )
//	}

}


