//──────────────────────────────
//	【衛士トムサン】
//──────────────────────────────
function "Talk_Tomsan"
{
	SetStopFlag(STOPFLAG_TALKTURN)
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM

	if( FLAG[GF_PAST_EPISODE_4_GO_CASTLE] )			//▼過去編Ⅳ王宮前へ向かう
	{
		//▼過去編Ⅳ王宮前へ向かう
		//───────────────
		//	場所		：王都東街区・建物内（過去）
		//───────────────
		//	配置・カメラ：受付
		//	モーション	：
		//───────────────
		ResetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない
		ChangeAnimation( "this", "ANI_WAIT", -1, 1 )	// 待機

		//	衛士トムサン
		TalkPopup("this",0,0,0,0,0)
		{
			"トワル街道は近年"
			"渋滞することが増えていまして……\p"
			"裏道の重要性が"
			"見直されて来ているようです。\p"
			"ふふ、我々も"
			"やりがいが出てきましたよ。"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない

	}
	else if( FLAG[GF_PAST_EPISODE_2_GO_SOUTHGATE] )			//▼過去編Ⅱ南門へ向かう
	{
		//▼過去編Ⅱ南門へ向かう
		//───────────────
		//	場所		：王都東街区・建物内（過去）
		//───────────────
		//	配置・カメラ：受付
		//	モーション	：
		//───────────────
		ResetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない

		if( !FLAG[GF_SUBEV_PAST_02_GIMMICK_A] )
		{
			if( !FLAG[TF_TOMSAN_TALK] )
			{

				PlayVoice(Y8V_5740,"this",100)	//巫女様…（呼びかけ）

				//	衛士トムサン
				TalkPopup("this",0,0,0,0,0)
				{
					"お、おや？"
					"なぜ街道方面から……？\p"
					"コホン、巫女様……"
					"できましたら、外出の際は"
					"供を連れてはいただけないでしょうか。\p"
					"ご指名さえいただければ"
					"衛士隊からも人員を派遣しますので。\p"
					"どうか、ご検討を。"
				}
				WaitPrompt()
				WaitCloseWindow()
				SetFlag( TF_TOMSAN_TALK, 1 )
			}
			else
			{
				//　　★繰り返し
				//	衛士トムサン
				TalkPopup("this",0,0,0,0,0)
				{
					"実はファンが、巫女様らしき小柄な方を"
					"時々見かけているとのことで、"
					"先日注意したばかりなのです。\p"
					"コホン、巫女様もできれば"
					"共をつれていただきたく……\p"
					"どうかご検討のほどを。"
				}
				WaitPrompt()
				WaitCloseWindow()
			}
		}
		else
		{
			//	------------------------------------------------------------
			//▼【過去ギミック②：鍵の噂を聞く】後
			//───────────────
			//	場所		：王都東街区・建物内（過去）
			//───────────────
			//	配置・カメラ：下のキャラと話す
			//	モーション	：
			//───────────────
			//　　振り返らない
			if( !FLAG[TF_TOMSAN_TALK] )
			{
				CallFunc("mp6213m:Talk_Tomsan_Citizen")	//共通会話
			}
			else
			{
				//　　★繰り返し
				
				LookChr("this","LEADER")
				
				//	衛士トムサン
				TalkPopup("this",0,0,0,0,0)
				{
					"これは巫女様、お手を"
					"煩わせてしまったようですね。\p"
					"どうか私どもからも"
					"礼を言わせてください。"
				}
				WaitPrompt()
				WaitCloseWindow()
			}
		}
		SetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない

	}
	else if( FLAG[GF_PAST_EPISODE_D3_WALK_CAPITAL] )			//▼ダーナ編③王都を歩く
	{
		ResetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない
		ChangeAnimation( "this", "ANI_WAIT", -1, 1 )	// 待機

		//▼ダーナ編③王都を歩く
		//───────────────
		//	場所		：王都東街区・建物内（過去）
		//───────────────
		//	配置・カメラ：受付
		//	モーション	：
		//───────────────
		if( !FLAG[TF_TOMSAN_TALK] )
		{
			//	衛士トムサン
			TalkPopup("this",0,0,0,0,0)
			{
				"こ、これは大樹の巫女様……"
				"このような場所まで。\p"
				"こちらは東街道の裏道ですからね、"
				"普段は閑散としたものです。\p"
				"外に相棒が立っていますが"
				"退屈だって毎日嘆いていますよ。"
				"よければお声をかけてやって下さい。"
			}
			WaitPrompt()
			WaitCloseWindow()
			SetFlag( TF_TOMSAN_TALK, 1 )
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし
			//	衛士トムサン
			TalkPopup("this",0,0,0,0,0)
			{
				"相棒は少々抜けていますが、"
				"あれで腕は立つんですよ。\p"
				"いざという時はやる男です。"
				"……多分ですが。"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		
		SetChrInfoFlag("this", INFOFLAG_NOTALKMOTION)	//W - 会話時にモーションしない

	}

	ResetStopFlag(STOPFLAG_TALKTURN)
}

function "Talk_Tomsan_Citizen"
{
		//　　振り返らない

		//　　振り返らない
		//	衛士トムサン
		TalkPopup("Tomsan",0,0,0,0,0)
		{
			"なるほどな……まあ"
			"鍵が壊れていなかったのは幸いだった。\p"
			"だがこのまま"
			"不問というわけにはいかぬな。\p"
			"王宮に親鍵が保管されているとはいえ"
			"やはり正式な鍵がなければ"
			"いざという時に困る事になるだろう。\p"
			"我ら衛士隊の遅れは"
			"人命に関わることもある……"
			"それは分かっているのだろうな？"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	青年
		TalkPopup("Citizen_2_D01",0,0,0,0,0)
		{
			"ううっ……"
			"ほ、本当にすみませんでした……"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	衛士トムサン
		TalkPopup("Tomsan",0,0,0,0,0)
		{
			"……ふむ、反省はしているようだな。\p"
			"巫女様の口添えもあることだし"
			"今回はこのくらいで許してやろう。\p"
			"ただし、届けは"
			"きっちり出してもらうぞ？"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	青年
		TalkPopup("Citizen_2_D01",0,0,0,0,0)
		{
			"は、はい、そりゃあもう！"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetFlag( TF_TOMSAN_TALK, 1 )

