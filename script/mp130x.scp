///////////////////////////////////////////////////////////////////////////////
// 初期化スクリプト
///////////////////////////////////////////////////////////////////////////////
//-------------------------------------------
// init
function "init"
{
	

	if(!FLAG[GF_NIGHTHUNT])	//通常時
	{

		if(FLAG[GF_MP130x_GIM_01] )
		{
			//ショートカット１を開通状態に
			MapAnime( "gim1" , "wait2" )
		}
		if(FLAG[GF_MP130x_GIM_02] )
		{
			//ショートカット２を開通状態に
			MapAnime( "gim2" , "wait2" )
		}
		if(FLAG[GF_MP130x_GIM_03] )
		{
			//ショートカット２を開通状態に
			MapAnime( "gim3" , "wait2" )
		}
	}
	else					//夜ダンジョン時
	{
		if(FLAG[GF_MP130xt2_GIM_01] )
		{
			//ショートカット１を開通状態に
			MapAnime( "gim1" , "wait2" )
		}
		if(FLAG[GF_MP130xt2_GIM_02] )
		{
			//ショートカット２を開通状態に
			MapAnime( "gim2" , "wait2" )
		}
		if(FLAG[GF_MP130xt2_GIM_03] )
		{
			//ショートカット２を開通状態に
			MapAnime( "gim3" , "wait2" )
		}
		// モンスター初期化
		SetChrWorkGroup(M0142, CWK_AIUNIQUE, AIUNIQUE_SLEEP)

		SetChrWorkGroup(M0142,	CWK_LV,	22)	// オットセイ
	}

	if(FLAG[GF_NIGHTHUNT])
	{
		SetChrWorkGroup(M0142, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0143, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0147, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0225, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0226, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0301, CWK_EXPMUL, 2.0f)
		SetChrWorkGroup(M0911, CWK_EXPMUL, 2.0f)
	}

}

