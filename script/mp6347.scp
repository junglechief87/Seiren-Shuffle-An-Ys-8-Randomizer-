	SetChrWork("lookp04", CWK_CHECKOFF, 0)		// 普通のルックポイントをオンに

	FadeIn(FADE_BLACK,FADE_FAST)

	SetFlag(SF_ALLMUTEKI,0)		//無敵ＯＦＦ
