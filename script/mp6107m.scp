	Wait(1)

	//カメラ位置復帰
	MoveCameraAt( 0 , -1057.610f , 786.870f , 27.944f , 0 )	// 注視点
	ChangeCameraDistance( 0 , 7.000f , 0 )		// 基本距離
	ChangeCameraElevation( 0 , 1.761f , 0 )	// 基本仰角
	RotateCamera( 0 , -161.642f , 0 )				// 角度
