function "init"
{
	
	//遠景不必要ノード削除◆マップ作業者用
	MapHide( "@BG2_mp6101m" , 0 )
	MapHide( "@BG2_mp6112m" , 0 )
	MapHide( "@BG2_mp5103m_2" , 0 )
	MapHide( "BG2_groundfog_forest" , 0 )

	// イベントエリア設定制御
	EventAreaEnable( "Stopper_Past_01_03" , 0 )	// 過去編Ⅰ：【ストッパー：東街道のストッパー】
	EventAreaEnable( "Stopper_Past_01_05" , 0 )	// 過去編Ⅰ：【ストッパー：王都方面のストッパー】

	EventAreaEnable( "evb2_act_0408" , 0 )	//アクティブボイス

	EventAreaEnable( "SubEV_Past_01_SpiritA_1" , 0 )	// 過去編Ⅰ：【精霊救出Ａ：精霊の声が聞こえる（必須）】


	if( FLAG[SF_EVENT_ON] )
	{
		//一般配置ファンクション呼び出し
		CallFunc("mp6112m:NpcPosition")

		// イベントボックス制御
		if( FLAG[GF_PAST_EPISODE_1_GO_CAMP] )			//▼過去編Ⅰアドルがいたポイントへ向かう
		{
			if( !FLAG[GF_SUBEV_PAST_01_SPIRITA_1] )			// 過去編Ⅰ：【精霊救出Ａ：精霊の声が聞こえる（必須）】を見た
			{
				EventAreaEnable( "SubEV_Past_01_SpiritA_1" , 1 )	// 過去編Ⅰ：【精霊救出Ａ：精霊の声が聞こえる（必須）】
			}
			if(FLAG[GF_SUBEV_PAST_01_SPIRITA_1] && !FLAG[GF_SUBEV_PAST_01_SPIRITA_2] )			// 過去編Ⅰ：【精霊救出Ａ：渦から精霊を助ける（必須）】を見た
			{
				SetChrPos("SubEV_Past_01_SpiritA_2",55.35f,901.68f,50.05f)// 過去編Ⅰ：【精霊救出Ａ：渦から精霊を助ける（必須）】
			}
		}

		// ストッパー制御
		if( FLAG[GF_PAST_EPISODE_1_GO_CAMP] )			//▼過去編Ⅰアドルがいたポイントへ向かう
		{
			EventAreaEnable( "Stopper_Past_01_03" , 1 )	// 過去編Ⅰ：【ストッパー：東街道のストッパー】
	
			if( !FLAG[GF_SUBEV_PAST_01_SPIRITA_2] )			// 過去編Ⅰ：【精霊救出Ａ：精霊の声が聞こえる（必須）】を見た
			{
				EventAreaEnable( "Stopper_Past_01_05" , 1 )	// 過去編Ⅰ：【ストッパー：王都方面のストッパー】
			}
		}

		//// アクティブボイス
		//if(!FLAG[GF_AVOICE_0408] && FLAG[GF_04MP6401M_GO_MP6101M] && !FLAG[GF_04MP5101_OUT_CAMP]){
		//	EventAreaEnable( "evb2_act_0408" , 1 )
		//}
	}

	//マップ名表示
	if(!FLAG[SF_LOADINIT] && !FLAG[GF_MPxxxx_MAP_NAME_NO_DRAW] && !FLAG[TF_MAPNAME_SHOWN]){
		if( FLAG[SF_LASTENTRY_NO] == 0 || FLAG[SF_LASTENTRY_NO] == 1 ){
			VisualName("visual/mapname/mn_6103.itp",VN_NAMEMAP2,-1,-1,VN_MAPNAME_TIME)//トワル街道
			SetFlag( TF_MAPNAME_SHOWN, 1 )				// 地名表示した（テンポラリ）
		}
	}
}

