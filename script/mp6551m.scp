	FadeOut(FADE_BLACK, 45)
	WaitFade()
	StopThread(1000)
	StopThread(1001)
	StopThread(1002)
	StopThread(1003)
	StopThread(1004)

	//終了処理ここから----------------------------------------------------
	CallFunc("mp6551m:SubEV_Past_GetToB5_ED")
