			MapAnime( "@gate02_lumi1" , "on" )
			MapAnime( "@gate02_lumi2" , "on" )
		} else if( FLAG[TF_MP6541_DOOR_CLOSE_LV]==3 ){
			MapAnime( "@gate_02" , "close_Lv3" )
			MapAnime( "@gate02_lumi1" , "on" )
			MapAnime( "@gate02_lumi2" , "on" )
			MapAnime( "@gate02_lumi3" , "on" )
		} else {
			MapAnime( "@gate_02" , "close" )//closed
			MapAnime( "@gate02_lumi1" , "on" )
