			SetChrWork("look02", CWK_CHECKOFF, 1)
			ChangeAnimation( "look01" , "ANI_STOP2", -1 , 1 )//OFF
			ChangeAnimation( "look02" , "ANI_STOP2", -1 , 1 )//OFF
			
		} else if( FLAG[GF_MP6541_SWITCH_02A] ) {
