			ChangeAnimation( "lookp02" , "ANI_STOP2", -1 , 1 )//OFF
		}
		// 段差
		if( FLAG[GF_MP6541_SWITCH_02A] && FLAG[GF_MP6541_SWITCH_02B] ) {
			MapAnime("EVENT_gim02", "open2" )
		
