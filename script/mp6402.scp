	//ChangeCameraDistance( 0 , 3.581f , 0 )		// 基本距離
	//ChangeCameraElevation( 0 , -5.260f , 0 )	// 基本仰角
	//RotateCamera( 0 , 218.679f , 0 )				// 角度
	//ChangeCameraPers( 0 , 46.000f , 0 )			// 視野角
	//SetCameraZPlane( 0.500f , 900.000f )			// ZPlane
