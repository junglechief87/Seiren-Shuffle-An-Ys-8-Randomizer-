			SetChrWork("statue03_03_2", CWK_TEMP_INT2, 0)//像1_OFF
			ChangeAnimation( "statue03_03_2" , "ANI_DEAD2", -1 , 1 )
			SetChrWork("statue03_03_3", CWK_TEMP_INT2, 0)//像1_OFF
			ChangeAnimation( "statue03_03_3" , "ANI_DEAD2", -1 , 1 )
				
		} else {
