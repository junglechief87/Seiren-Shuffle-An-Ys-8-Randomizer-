			ActiveVoiceStart(EACT_EVID_1403, 1, 0)	//地下聖堂の途中で
		}
	}

	// イベントエリア設定制御
	EventAreaEnable( "gimic_start_03" , 0 )

	//if( FLAG[SF_EVENT_ON] ){
	
		// 一般配置ファンクション呼び出し
		CallFunc("mp6513m:NpcPosition")

