			SetChrWork("bird03_02", CWK_TEMP_FLOAT9, 1.2f)//ゾーン別の速度倍率
			SetChrWork("bird03_03", CWK_TEMP_FLOAT9, 1.2f)//ゾーン別の速度倍率
			
