		if(!FLAG[GF_AVOICE_1403] && FLAG[GF_SUBEV_PAST_02_QUEST_G] && !FLAG[GF_SUBEV_PAST_02_BOSS] &&  FLAG[SF_LASTENTRY_NO] == 0 ){
