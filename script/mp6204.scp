	LoadArg("map/mp6204m/mp6204m.arg")
	EventCue("mp6204m:SubEV_Past_04_Rearrive2")
	
	ResetStopFlag(STOPFLAG_EVENT)

//終了処理ここまで----------------------------------------------------
}
