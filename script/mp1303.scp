		SetFlag(SF_ITEMSLOT_NUM,1)
	}

	//◆マップマーカー検証
//	DelMapMarker( SMI_SYMBOL,PAGE_MP1301,MARKER_EV_M02S190, 0, 0)

	CallFunc("mp1303:init" )

	SetChrPos("PLAYER1", 26.23f, -185.51f, -49.67f)
