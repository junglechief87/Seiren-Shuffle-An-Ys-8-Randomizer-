		Portrait_Close(  1 )
		Portrait_Unload( 1 )
	} else {
		Portrait_Close(  2 )
		Portrait_Unload( 2 )
	}

	WaitFade()
	// --------------------------------------------------------- ▲

	//　　ポートレートを閉じてダーナに！エモーション。
	EmotionEx("DANA", 0.00f, EMO_EX, 0, 5, 1, 1, 1.0f )	// 「！」
	Wait(40)

	// ダーナ
	TalkPopup("DANA",0,1,0,0,0) {
		"#071e#000mい、今のは……？"
	}
	WaitPrompt()
	WaitCloseWindow()

	Look("DANA", 0.0f, -10.0f)	// うつむく

	// ダーナ
	TalkPopup("DANA",0,1,0,0,0) {
		"#010e#000m#0L（あの剣士の姿が視えたような……）"
	}
	WaitPrompt()
	WaitCloseWindow()
	
	Look("DANA", 0.0f, 0.0f)	// うつむく
	
	// ダーナ
	TalkPopup("DANA",0,1,0,0,0) {
		"#012e#000mうーん…………"
	}
	WaitPrompt()
	WaitCloseWindow()

	Wait(5)

