	// 被写界深度の設定
	SetDoF(0, LERP_LINEAR, 2.000, 40.000 ,1.000 ,0.700 ,0.500)
	// グレアの設定
	SetGlare(0, LERP_LINEAR, 0.700, 1.300 ,1.000 ,1.000 ,0.600 ,0.000 ,1.000)

	SetFlag(TF_MENU_SELECT,0)

	//スキップ許可
	SetSkipScript("mp5103m:SubEV_Past_01_Gimmick_A_ED")

//開始処理ここまで-----------------------------------------------

	//　　過去編Ⅰでmp5102mへ行くと、
	//　　壊れた水路がある。
	//　　ＬＰで調べると、イベントが起動する。
