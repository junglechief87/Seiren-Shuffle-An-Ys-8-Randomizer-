			!FLAG[TF_REJA_QS_TALK] )
		{
			//──────────  一般・開始処理  ────────────
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			ResetStopFlag(STOPFLAG_TALK)
			SetStopFlag(STOPFLAG_TALK2)
			//Wait(1)		// 選択肢あり時用
			//───────────────
			//	場所		：外れ・農場
			//───────────────
			//	配置・カメラ：レーヤ基本Ｂ（苗を見る）
			//	モーション	：思案する
			//───────────────
			LookSpd("this", 1.0f, 1.0f, 1.0f)
			LookTo("Reja", -30.514f , -1417.142f , 31.192f )	// 首を正面に向ける
			CallFunc("talkcam:Reja_NormalB")		//基本Ｂ（苗を見る）
			CallFunc("system:talkevent_begin")		//TALK_BEGIN
			LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
			//───────────────────────────────
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし
			LookChr("this", "LEADER")
		}

		if( !FLAG[TF_REJA_QS_TALK] )
		{
			TalkPopup("Reja",0,0,0,0,0)
			{
				"#000e#000mはあ、あいつ"
				"どこ行っちまったんだろ……\p"
				"目撃情報はあるから"
				"村の中にいるはずなんだけどな。"
			}
			WaitPrompt()
			WaitCloseWindow()
			
			//　　レーヤにＰＡエモーション
			EmotionEx("Reja", 0.00f, EMO_PA, 0, 5, 1, 1, 1.0f)	//パッ
			Wait(50)
			
			TalkPopup("Reja",0,0,0,0,0)
			{
				"#000e#000mあ、そういや……"
				"休憩所の方にはいないと思うぜ。\p"
				"あそこにはよくクイナがいるだろ？\p"
				"クイナはすげー勘がいいし、"
				"見つかったらイタズラされちまうから"
				"近づかないみたいなんだ。\p"
				"オレに分かるのはそれくらいかな……\p"
				"ともかく兄ちゃん、"
				"なんとか見つけ出してくれよ～！"
				"よろしく頼んだぜ！4"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし
			LookChr("this", "LEADER")
			
			TalkPopup("Reja",0,0,0,0,0)
			{
				"#000e#000m村の中にいるはずなんだ……"
				"たぶん、休憩所以外のどこかだと思う。\p"
				"兄ちゃん、なんとか見つけ出してくれよ～！"
				"よろしく頼んだぜ！5"
			}
			WaitPrompt()
			WaitCloseWindow()
		}

		if( FLAG[GF_NPC_4_01_GOTO_NORTH] &&			//▼第四部①島北部に足を踏み入れた
//			!FLAG[GF_NPC_4_01_OCCUR_INTERCEPT7] &&	//！☆第四部Ｆ迎撃戦⑦が発生
			!FLAG[GF_NPC_4_01_AFTER_INTERCEPT7] &&	//！☆第四部Ｆ迎撃戦⑦を済ませた
			!FLAG[TF_REJA_QS_TALK] )
		{
			Turn("Reja", 159.23, 360.0f )			//向きリセット
			CallFunc("system:talkevent_end")		//TALK_END
			SetStopFlag(STOPFLAG_TALK)
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
