		{
			"#000e#000mふむ、その件か。 "
			"では改めて説明させてもらおう。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		SetEnvSEPlayState(-1, 0)	//環境SE全停止

		//　　画面暗転を挟んで、外れの広場・円形花壇の前。
		FadeOut(FADE_BLACK,FADE_NORMAL)
