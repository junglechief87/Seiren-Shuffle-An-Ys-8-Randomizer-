		SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
		//SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		//LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_610_Start")		// 【QS610】親友の遺言（ダーナ）	▼クエスト開始イベント
	}
	//▼クエスト達成前
	else
	{
		if( !FLAG[TF_DANA_QS_TALK] )
		{
			//──────────  一般・開始処理  ────────────
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			ResetStopFlag(STOPFLAG_TALK)
			SetStopFlag(STOPFLAG_TALK2)
			//Wait(1)		// 選択肢あり時用
			//───────────────
			//	場所		：中央上段・高台
			//───────────────
			//	配置・カメラ：ダーナ移動Ａ（高台）
			//				  海に向いている
			//	モーション	：
			//───────────────
			LookSpd("this", 1.0f, 1.0f, 1.0f)
			LookTo("Dana", -1.762f , -1476.893f , 26.155f )	// 首を正面に向ける
			ChangeAnimation( "this", "ANI_EV_SIAN_S", -1, 1 )
			ChangeSubAnimation("this",SUBMOT_EYE,ANI_E_SAD,1)
			ChangeSubAnimation("this",SUBMOT_EXT1,ANI_E_LOOKL,1)
			CallFunc("talkcam:Dana_MoveA")			//移動Ａ（高台）
			CallFunc("system:talkevent_begin")		//TALK_BEGIN
			LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
			//───────────────────────────────
			
			TalkPopup("Dana",0,0,0,0,0)
			{
				"#000m伝承に登場する『青き鳥』……\p"
				"オルガちゃんは、もしもの時は"
				"かの者に託すって言っていたけど……\p"
				"#010e#080m#022lもしかしたら、その言葉の意味が"
				"分かるかもしれないね。"
			}
			WaitPrompt()
			WaitCloseWindow()

			ChangeAnimation( "this", "ANI_EV_SIAN_E", -1, 1 )
			WaitAnimation2( "this" , -1, 1, "ANI_EV_SIAN_E",  0)
			ChangeAnimation("this","ANI_EV_TEBURI", -1 , 1 )

			TalkPopup("this",0,0,0,0,0)
			{
				"#080eふふっ、なんだか元気が出てきたよ。"
				"アドルさん、一緒に調べてみよう！"
			}
			WaitPrompt()
			WaitCloseWindow()
			
			SetFlag( TF_DANA_QS_TALK, 1 )
			Turn("Dana", -16.72f, 360.0f )			//向きリセット
			CallFunc("system:talkevent_end")		//TALK_END
			SetStopFlag(STOPFLAG_TALK)
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし
			LookChr("this", "LEADER")
			
			TalkPopup("Dana",0,0,0,0,0)
			{
				"#000e#000mオルガちゃんの最後の言葉……"
				"もしかしたら、伝えたかった事が"
				"分かるかもしれないね。\p"
				"ふふっ、なんだか元気が出てきたよ。"
				"アドルさん、一緒に調べてみよう！"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
	}
