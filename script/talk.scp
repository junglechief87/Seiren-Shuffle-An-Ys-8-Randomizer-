// リコッタ、サハドの共通会話
function "Talk_Ricotta_Sahad_3_03"
{
	//▼第三部③リコッタが仲間になった
	//──────────  一般・開始処理  ────────────
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	ResetStopFlag(STOPFLAG_TALK)
	SetStopFlag(STOPFLAG_TALK2)
	//Wait(1)		// 選択肢あり時用
	//───────────────
	//	場所		：中央下段・集会所
	//───────────────
	//	配置・カメラ：★専用／サハド・リコッタ「▼第三部③リコッタが仲間になった」
	//				  集会所の空きスペースに適当に配置
	//	モーション	：
	//───────────────
	SaveCamera()
	ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
	SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
	RollCamera( 0 , 0.0f , 0 )		// ロール回転
	MoveCameraAt( 0 , 30.615f , -1421.422f , 12.212f , 0 )	// 注視点
	MoveCamera( 0 , 30.008f , -1420.389f , 12.145f , 0 )		// 視点

	SetChrWork("Ricotta", CWK_SCRIPTPAUSE, 1)
	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 1)
	SetChrWork("Sahad", CWK_SCRIPTPAUSE, 1)
	SetChrWork("Sahad", CWK_DEFAULT_SKIPNODE_OFF, 1)
	
	//キャラ初期動作の記述
	LookSpd("this", 1.0f, 1.0f, 1.0f)
	LookChr( "Ricotta", "Sahad" )
	LookChr( "Sahad", "Ricotta" )
	CallFunc("system:talkevent_begin")		//TALK_BEGIN
	LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	//───────────────────────────────

	//　　振り向かない

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#020e#080mセンパイと会えた、とっても嬉しい！\p"
		"#000e#000mそれはそうと、父上と行った洞窟、"
		"リコッタ住んでいる山の近く。\p"
		"急いで行く──"
		"そしたらまた、この村に戻ってくる！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#021e#080mガハハ、リコッタはすっかり"
		"ここが気に入ったみたいだな。"
	}
	WaitPrompt()
	WaitCloseWindow()

	// うなずきセット
	HeadYes("Ricotta" , 1 , 25 )
	ChangeSubAnimation("Ricotta", SUBMOT_EYE, ANI_E_CLOSE_S, 1)
	Wait(10)
	ChangeSubAnimation("Ricotta", SUBMOT_EYE, ANI_E_CLOSE_E, 1)
	Wait(5)

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#010e#080m然り、とても！\p"
		"#080e#080mここ、リコッタの領土にする！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#070e#000mりょ、領土だと……？"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#011e#000m領土、好きに出入りできる場所。\p"
		"#050e……リコッタ、一人で来ちゃダメか？"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#080e#080mガハハ、そういう意味か……"
		"大げさな言葉使うから驚いたぜ。\p"
		"#020e#080mもちろんいいに決まってるぜ！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#020e#080mほんとか！？　感謝！"
	}
	WaitPrompt()
	WaitCloseWindow()

	SetChrWork("Ricotta", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 2)
	SetChrWork("Sahad", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Sahad", CWK_DEFAULT_SKIPNODE_OFF, 2)
	SetFlag( TF_RICOTTA_TALK, 1 )
	SetFlag( TF_SAHAD_TALK, 1 )
	SetFlag( TF_REX_TALK, 1 )
	CallFunc("system:talkevent_end")		//TALK_END
	SetStopFlag(STOPFLAG_TALK)
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	LookChr( "Sahad" , "Ricotta" )
	LookChr( "Ricotta", "Sahad" )
}

