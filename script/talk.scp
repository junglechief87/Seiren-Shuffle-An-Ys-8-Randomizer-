// タナトス、サハド、リコッタの共通会話
function "Talk_Thanatos_Sahad_5_03"
{
	//──────────  一般・開始処理  ────────────
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	ResetStopFlag(STOPFLAG_TALK)
	SetStopFlag(STOPFLAG_TALK2)
	//Wait(1)		// 選択肢あり時用
	//───────────────
	//	場所		：中央下段・集会所
	//───────────────
	//	配置・カメラ：★専用／サハド・リコッタ・タナトス「▼第五部②バハの塔に向かう」
	//				  集会所の適当な空きスペースでサハド・リコッタ・タナトスが会話している
	//	モーション	：
	//───────────────
	SaveCamera()
	ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
	SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
	RollCamera( 0 , 0.0f , 0 )		// ロール回転
	MoveCameraAt( 0 , 30.135f , -1421.842f , 12.125f , 0 )	// 注視点
	MoveCamera( 0 , 31.277f , -1422.311f , 12.252f , 0 )		// 視点
	
	//キャラ初期動作の記述
	LookSpd("Sahad", 1.0f, 1.0f, 1.0f)
	LookSpd("Thanatos", 1.0f, 1.0f, 1.0f)
	LookSpd("Ricotta", 1.0f, 1.0f, 1.0f)
	ChangeSubAnimation("Sahad",SUBMOT_EYE,ANI_E_SAD,1)
	//LookTo("Thanatos", 0.0f , 0.0f , 0.0f )
	LookChr( "Sahad", "Thanatos" )
	LookChr( "Thanatos", "Sahad" )
	LookChr( "Ricotta", "Sahad" )
	SetChrWork("Sahad", CWK_SCRIPTPAUSE, 1)
	SetChrWork("Sahad", CWK_DEFAULT_SKIPNODE_OFF, 1)
	SetChrWork("Ricotta", CWK_SCRIPTPAUSE, 1)
	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 1)
	SetChrWork("Thanatos", CWK_SCRIPTPAUSE, 1)
	SetChrWork("Thanatos", CWK_DEFAULT_SKIPNODE_OFF, 1)
	CallFunc("system:talkevent_begin")		//TALK_BEGIN
	LookSpd("Sahad", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	LookSpd("Ricotta", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	LookSpd("Thanatos", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	//───────────────────────────────

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mフム、しかし大の大人が"
		"幽霊が苦手じゃとはのう。"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#000e#000m一体、何が恐い？"
	}
	WaitPrompt()
	WaitCloseWindow()

	LookChr( "Sahad", "Ricotta" )

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#061e#000m何がって……"
		"もう死んじまってるんだぞ！\p"
		"#062e下手すりゃ、ワシらまで"
		"あの世に連れていかれちま──"
	}
	WaitPrompt()
	WaitCloseWindow()

	//　　タナトスに「パッ」エモーション。
	EmotionEx("Thanatos", 0.00f, EMO_PA, 0, 5, 1, 1, 1.0f)	//パッ
	Wait(30)

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mおや、お前さんの後ろに……"
	}
	WaitPrompt()
	WaitCloseWindow()

	//　　サハドが身体ごと後ろを向き、
	//　　身構えて「アセアセ」エモーション。
	EmotionEx("Sahad", 0.00f, EMO_EX2, 0, 5, 1, 1, 1.0f)	//！！
	Wait(20)
	LookReset( "Sahad" )
	Turn("Sahad",161.15f,20.0f)

	ChangeAnimation( "Sahad", "ANI_EV_BIBIRI2_S", -1, 1 )
	EmotionEx("Sahad", 0.00f, EMO_ASE, 0, 5, 1, 1, 1.0f)	//汗汗

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#000e#000mひいいいっ！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mワハハハハッ、冗談じゃ冗談！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#000e#000mわははははっ、サハド面白い！"
		"面白い2行目"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Sahad",0,0,0,0,0)
	{
		"#000e#000mカ、カンベンしてくれぃ……"
	}
	WaitPrompt()
	WaitCloseWindow()

	SetFlag( TF_THANATOS_TALK, 1 )
	SetFlag( TF_SAHAD_TALK, 1 )
	SetFlag( TF_RICOTTA_TALK, 1 )
	Turn("Thanatos", 152.46f, 360.0f )		//向きリセット
	Turn("Sahad", -24.75f, 360.0f )			//向きリセット
	Turn("Ricotta", 61.22f, 360.0f )		//向きリセット
	SetChrWork("Sahad", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Sahad", CWK_DEFAULT_SKIPNODE_OFF, 2)
	SetChrWork("Ricotta", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 2)
	SetChrWork("Thanatos", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Thanatos", CWK_DEFAULT_SKIPNODE_OFF, 2)
	ChangeAnimation( "Sahad", "ANI_EV_BIBIRI2_E", -1, 1 )
	CallFunc("system:talkevent_end")		//TALK_END
	SetStopFlag(STOPFLAG_TALK)
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	LookChr( "Thanatos" , "Sahad" )
	LookChr( "Sahad" , "Thanatos" )
}

// リコッタ、タナトスの共通会話
function "Talk_Ricotta_Thanatos_7_01"
{
	//▼エピローグ①寺院前へ向かう

	//──────────  一般・開始処理  ────────────
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	ResetStopFlag(STOPFLAG_TALK)
	SetStopFlag(STOPFLAG_TALK2)
	//Wait(1)		// 選択肢あり時用
	//───────────────
	//	場所		：中央下段・集会所
	//───────────────
	//	配置・カメラ：★専用／リコッタ・タナトス「▼エピローグ①寺院前へ向かう」
	//				  集会所の適当な空きスペースでリコッタとタナトスが向き合う
	//	モーション	：
	//───────────────
	SaveCamera()
	ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
	SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
	RollCamera( 0 , 0.0f , 0 )		// ロール回転
	MoveCameraAt( 0 , 26.091f , -1419.815f , 12.194f , 0 )	// 注視点
	MoveCamera( 0 , 27.072f , -1419.354f , 12.380f , 0 )		// 視点
	// ResetCameraZPlane()	// イベント終了時に呼び出して下さい。マップ側の設定に戻します。
	
	SetChrWork("Thanatos", CWK_SCRIPTPAUSE, 1)
