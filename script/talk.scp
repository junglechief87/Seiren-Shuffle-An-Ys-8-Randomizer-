// ■会話リヒト
function "Talk_Licht"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if (FLAG[DF_JOIN_LICHT])                                 //( FLAG[GF_1STTALK_3_01_LICHT] || FLAG[GF_NPC_3_02_GOTO_GENSD])	//▼第三部①ラクシャの元へ向かう　ＧＦ初回以降リヒトに話しかけると診療所ショップが開く  もしくは、▼第三部②ジャンダルムに向かう以降
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x01 ) )	// 0x01:ショップあり
		
		CallFunc("talk:Speedrun_Kiergaard_Calc")	// TF_MENU_SELECTに持っている調合書の数が入る（キルゴール用の処理を利用）
		if( FLAG[TF_MENU_SELECT] > 0 )	// 調合書を持っている
		{
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x100 ) )	// 0x100:調合書を渡せる
		}
	}
	if( ALLITEMWORK[ICON3D_PRESENT_LICHT] &&	//「古びた聴診器」
		FLAG[GF_NPC_5_04_GOTO_HOLLOW] )			// 発生タイミング：▼第五部④大空洞へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if(( FLAG[GF_QUEST_301] == QUEST_BBS || FLAG[GF_QUEST_301] == QUEST_START ) &&
		(FLAG[GF_NPC_3_02_AFTER_INTERCEPT5] || FLAG[GF_NPC_3_03_JOIN_RICOTTA]))	//☆第三部Ｆ迎撃戦⑤が発生		 
	{
		//「▼第三部②ジャンダルムに向かう」を過ぎた後
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
	}
	if(( FLAG[GF_QUEST_301] == QUEST_BBS || FLAG[GF_QUEST_301] == QUEST_START ) &&
		 ALLITEMWORK[ICON3D_MT_N3_LIQUID] >= 1 &&	// 【QS301】新しい薬の調合（リヒト） 『煌く粘液』×１を持っている
		 ALLITEMWORK[ICON3D_MT_N3_FLOWER] >= 1 )	// 【QS301】新しい薬の調合（リヒト） 『輝く葉』×１を持っている
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}
	if( FLAG[GF_QUEST_505] == QUEST_BBS || FLAG[GF_QUEST_505] == QUEST_START )	//【QS505】月光草の採取
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x40 ) )	// 0x40:クエスト用選択肢あり３
	}
	
////////////////////////////////////////////////////
// リヒト：サブイベント
//
	if( FLAG[GF_02MP1201_START_HEARING] &&		// 聞き込みを開始した
		!FLAG[GF_SUBEV_NEMO_TALK_LICHT] )		// 名無しについてリヒトと話した
	{
		EventCue("mp1201:SubEV_02_Talk_Licht")	//【名無しの聞き込み：リヒト】
	}
////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
