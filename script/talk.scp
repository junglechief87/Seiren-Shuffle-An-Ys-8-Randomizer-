// ■会話アリスン
function "Talk_Alison"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( FLAG[GF_NPC_2_04_JOIN_ALISON] )		//▼第二部④アリスンを助けた
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x01 ) )	// 0x01:ショップあり
	}
	if( ALLITEMWORK[ICON3D_PRESENT_ALISON] &&	//「精巧な針」
	//	FLAG[GF_NPC_3_02_GOTO_GENSD] )			// 発生タイミング：▼第三部②ジャンダルムに向かう
		FLAG[GF_NPC_3_01_GOTO_LAXIA] )			// 発生タイミング：▼第三部①ラクシャの元へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if (FLAG[GF_QUEST_222] == QUEST_BBS || FLAG[GF_QUEST_222] == QUEST_START)	// 【QS222】仕立ての練習（アリスン） クエスト達成失敗前
	{
		//「▼第二部⑧カトリーンを助けた」を過ぎた後
		if (FLAG[GF_NPC_2_09_CHECK_LOOKOUT])
		{
			//　【仕立ての練習】について		＞「▼クエスト用会話」に接続			※「▼第二部⑧カトリーンを助けた」を過ぎた後に出現
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
		}
	}
	if(( FLAG[GF_QUEST_222] == QUEST_BBS || FLAG[GF_QUEST_222] == QUEST_START ) &&
		 ALLITEMWORK[ICON3D_MT_N2_LEATHER] >= 3 )	// 【QS222】仕立ての練習（アリスン） 「分厚い皮」×３を持っている
	{
		//　『分厚い皮』×３を渡す		＞「▼クエスト達成イベント」に接続		※掲示板を確認、かつ素材を持っていると出現
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}
	
	// 会話条件の取り消しチェック
	if( FLAG[GF_QS510_LOOK_SUBEV] &&			// 【QS510】▼サブイベント・アリスンが倒れる を見た後
		FLAG[GF_QUEST_510] < QUEST_FALSE )		// 【QS510】故郷の花 クエスト達成失敗前
	{
		// 五部の寝込むタイミングでは一時的にプレゼントの選択肢を消す
		if( FLAG[TF_TALK_TYPE] & 0x02 )	// 0x02:プレゼントアイテムあり
		{
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] - 0x02 ) )	// 0x02:プレゼントアイテムありを取り消す
		}
	}

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Alison2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
//	・アリスン限定・倒れている間は会話選択肢が一切出ない
	else if( FLAG[GF_NPC_5_02_GOTO_BAHA] && !FLAG[GF_NPC_5_04_GOTO_HOLLOW] )	//▼第五部②バハの塔に向かう～！▼第五部④大空洞へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Alison2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// アリスン：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_ALISON] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_02_GOTO_GEND] &&				//▼第六部②ジャンダルム頂上へ向かう
		!FLAG[TF_ED_PRESENT_TALK] &&				//※マップ切り替えるまではエド・アリスンの親愛が起きなくする特殊フラグ
		FLAG[GF_LIKELV_ALISON] >= 2 && FLAG[GF_LIKELV_ED] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
//		ExecuteCmd(1000, TurnToChr, "Alison", "LEADER", 8.0f )	// 操作キャラに向かせる
//		ExecuteCmd(1001, TurnToChr, "Ed", "LEADER", 8.0f )	// 操作キャラに向かせる
//		WaitThread(1000)
			
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("Alison", "LEADER")
		LookChr("Ed", "LEADER")
			
		//　　アリスンとエドの好感度が共にＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Alison",0,0,0,0,0)
		{
			"#000e#000mあの、アドルさん。"
		}
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("Ed",0,0,0,0,0)
		{
			"#000e#000mよければ一緒にお茶でもどうかな？"
		}
		WaitPrompt()
		WaitCloseWindow()

		Wait(20)

		StopBGM(90)
		SetFlag(SF_NOCHANGEBGM, 1)

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		SetFlag(GF_MP1202_NOW,1)		//屋内に直接飛ぶ場合
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Alison")

		SetEnvSEPlayState(-1, 0)	//環境SE全停止
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// アリスン：メインイベント
	else if(FLAG[GF_02MP1201_JOIN_ALISON] && !FLAG[GF_02MP1202_OPEN_DRESS]){	//アリスンが仕立屋を始める
		EventCue("mp1201:EV_M02S095")
	}
////////////////////////////////////////////////////
// アリスン：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if( ( FLAG[GF_NPC_6_03_OCCUR_INTERCEPT12] && !FLAG[GF_NPC_7_01_GOTO_TEM] &&				!FLAG[TF_ALISON_TALK] )||	//★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）～　▼第六部④想剣ミストルティンを入手 初回会話
				( FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] && !FLAG[GF_NPC_6_02_GOTO_GEND] &&			!FLAG[TF_ALISON_TALK] )||	//★第六部①迎撃戦⑪が発生
				( FLAG[GF_NPC_5_08_MEET_DANA] && !FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] &&			!FLAG[TF_ALISON_TALK] ) )	//▼第五部⑧ダーナと合流する
			{
				//	★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）～　▼第六部④想剣ミストルティンを入手 初回会話　は振り向かない
				//	★第六部①迎撃戦⑪が発生　初回会話　は振り向かない
				//▼第五部⑧ダーナと合流する　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] &&				!FLAG[TF_ALISON_TALK] )||	//▼第五部⑥宴の漂流村を散策（夜）
					( FLAG[GF_NPC_5_03_AFTER_INTERCEPT9] && !FLAG[GF_NPC_5_04_GOTO_HOLLOW] &&		!FLAG[TF_ALISON_TALK] ) ||	//☆第五部Ｆ迎撃戦⑨を済ませた
