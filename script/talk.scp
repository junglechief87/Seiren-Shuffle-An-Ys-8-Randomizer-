// エアラン：やり込み
function "Talk_Speedrun_Aaron"
{
	//▼エアランの「地図を見せる」用処理

	LookChr("this", "LEADER")

	if (rand() % 100 < 50)
	{
		PlayVoice(Y8V_3841,"Aaron",100)	//そんじゃ見せてもらうぜ。
		TalkPopup("Aaron",0,0,0,0,0)
		{
			"#000e#000mそんじゃ見せてもらうぜ。"
		}
		WaitPrompt()
		WaitCloseWindow()
	} else {
		PlayVoice(Y8V_3842,"Aaron",100)	//ああ、どれどれ…
		TalkPopup("Aaron",0,0,0,0,0)
		{
			"#000e#000mああ、どれどれ……"
		}
		WaitPrompt()
		WaitCloseWindow()
	}

	//	WK_MAPRATIO - 地図の踏破率（1000で100%）
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:イベント発生（選択肢を抜ける）

	//報告出来るかのチェック	//if文が長すぎるとエラーが出てしまうので、分割してあります
	SetFlag(TF_MENU_SELECT,0)
	if( ( WORK[WK_MAPRATIO] < 200  && FLAG[GF_SPEEDRUN_MAP_10P] )||	// 10%～20％未満で１０％アイテムを貰っている
		( WORK[WK_MAPRATIO] < 300  && FLAG[GF_SPEEDRUN_MAP_20P] )||	// 20%～30％未満で２０％アイテムを貰っている
		( WORK[WK_MAPRATIO] < 400  && FLAG[GF_SPEEDRUN_MAP_30P] )||	// 30%～40％未満で３０％アイテムを貰っている
		( WORK[WK_MAPRATIO] < 500  && FLAG[GF_SPEEDRUN_MAP_40P] ))	// 40%～50％未満で４０％アイテムを貰っている
	{
		SetFlag(TF_MENU_SELECT,1)	//報告出来ない
	}
	else if(( WORK[WK_MAPRATIO] < 600  && FLAG[GF_SPEEDRUN_MAP_50P] )||	// 50%～60％未満で５０％アイテムを貰っている
			( WORK[WK_MAPRATIO] < 700  && FLAG[GF_SPEEDRUN_MAP_60P] )||	// 60%～70％未満で６０％アイテムを貰っている
			( WORK[WK_MAPRATIO] < 800  && FLAG[GF_SPEEDRUN_MAP_70P] ) )	// 70%～80％未満で７０％アイテムを貰っている
	{
		SetFlag(TF_MENU_SELECT,1)	//報告出来ない
	}
	else if(( WORK[WK_MAPRATIO] < 900  && FLAG[GF_SPEEDRUN_MAP_80P] )||	// 80%～90％未満で８０％アイテムを貰っている
			( WORK[WK_MAPRATIO] < 1000 && FLAG[GF_SPEEDRUN_MAP_90P] ))	// 90%～100％未満で９０％アイテムを貰っている
	{
		SetFlag(TF_MENU_SELECT,1)	//報告出来ない
	}

	//─────────────────────────
	//	⇒報告が出来ない場合
	if( WORK[WK_MAPRATIO] < 100 ||	// 10％未満
		FLAG[TF_MENU_SELECT] == 1 )
	{
		//	  　エアランに「…」エモーション。
		EmotionEx("Aaron", 0.00f, EMO_3DOT, 0, 5, 1, 1, 1.5f)	//…
		Wait(60)

		PlayVoice(Y8V_3845,"Aaron",100)	//大して進んでねえじゃねえか
		TalkPopup("Aaron",0,0,0,0,0)
		{
			"#000e#000m大して進んでねえじゃねえか。\p"
			"わざわざ見せるってんなら、"
			"もちっと成果を上げてくるんだな。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//	  　会話終了。
	}
	//	⇒報告が出来る場合
	else
	{
		//	  　そのまま以下の流れ。
		SetFlag( GF_QS_EVENT_TMP, 1 )	//1:イベント発生（選択肢を抜ける）
		
		ResetStopFlag(STOPFLAG_TALK)
		CallFunc( "talk:Speedrun_Aaron" )
	}
	//─────────────────────────
}
