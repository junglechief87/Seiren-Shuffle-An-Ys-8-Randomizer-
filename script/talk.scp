// ■会話タナトス
function "Talk_Thanatos"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( ALLITEMWORK[ICON3D_PRESENT_THANATOS] &&	//「文字入りの万年筆」
		FLAG[GF_NPC_6_02_GOTO_GEND])			//発生タイミング：▼第六部②ジャンダルム頂上へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if( FLAG[GF_QUEST_521] == QUEST_BBS || FLAG[GF_QUEST_521] == QUEST_START ) 
	{
		if (FLAG[GF_NPC_5_04_GOTO_HOLLOW]){// ▼第五部④大空洞へ向かう

			SetFlag(TF_TALK_TYPE, (FLAG[TF_TALK_TYPE] + 0x10))	// 0x10:クエスト用選択肢あり１【巨大な怨敵】
		}	
	}
	if( FLAG[GF_QUEST_602] == QUEST_START &&	// 【QS602】白酒の調達（カシュー）
		ALLITEMWORK[ICON3D_FERMENTATION_SAP] < 3)	// 『発酵樹液』×３を持っていない
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x10:クエスト用選択肢あり２
	}
	//海賊のメモの確認
	if( ALLITEMWORK[ICON3D_MEMO_P_001] &&		//	海賊のメモ①
		ALLITEMWORK[ICON3D_MEMO_P_002] &&		//	海賊のメモ②
		ALLITEMWORK[ICON3D_MEMO_P_003] &&		//	海賊のメモ③
		ALLITEMWORK[ICON3D_MEMO_P_004] &&		//	海賊のメモ④
		ALLITEMWORK[ICON3D_MEMO_P_005] &&		//	海賊のメモ⑤
		ALLITEMWORK[ICON3D_MEMO_P_006] )		//	海賊のメモ⑥
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x100 ) )	// 0x100:海賊のメモを揃えた
	}

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Thanatos2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// タナトス：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_THANATOS] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_02_GOTO_GEND] &&				//▼第六部②ジャンダルム頂上へ向かう
		FLAG[GF_LIKELV_THANATOS] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
		//ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
		//WaitThread(1000)
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("this", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Thanatos",0,0,0,0,0)
		{
			"#000e#000mアドル、コーヒーを"
			"淹れたんじゃが一緒に飲まんか？"
		}
		WaitPrompt()
		WaitCloseWindow()

		StopBGM(120)
		SetFlag(SF_NOCHANGEBGM, 1)
		SetEnvSEPlayState(-1, 0)	//環境SE全停止

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		SetFlag(GF_MP1202_NOW,1)		//屋内に直接飛ぶ場合
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Thanatos")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// タナトス：メインイベント
//
//
////////////////////////////////////////////////////
// タナトス：やり込み：海賊のメモ
	else if( FLAG[TF_TALK_TYPE] & 0x100 )			// 海賊のメモを揃えた
	{
		// やり込み処理
		CallFunc( "talk:Talk_Speedrun_Thanatos" )		// タナトス：やり込み
	}
	else if( !FLAG[GF_SUBEV_MEMO_P_TALK] &&		// 海賊のメモ：▼タナトスに海賊のメモについて聞く を見た
		FLAG[GF_NPC_5_02_GOTO_BAHA] &&			//▼第五部②バハの塔に向かう
		!FLAG[GF_NPC_7_01_GOTO_TEM] )			//▼エピローグ①寺院前へ向かう
	{
		// ▼タナトスに海賊のメモについて聞く
		CallFunc( "talk:Talk_Speedrun_Thanatos_1st" )
	}
////////////////////////////////////////////////////
// タナトス：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）
			if( ( FLAG[GF_NPC_5_08_MEET_DANA] && !FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] &&		!FLAG[TF_THANATOS_TALK] )||		//▼第五部⑧ダーナと合流する
				( FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] && !FLAG[GF_NPC_5_03_OCCUR_INTERCEPT9] &&		!FLAG[TF_THANATOS_TALK] )||		//▼第五部③幽霊船を調べに向かう
				( FLAG[GF_NPC_5_02_GOTO_BAHA] && !FLAG[GF_NPC_5_02_GOTO_LOOKOUT] &&				!FLAG[TF_THANATOS_TALK] ) )		//▼第五部②バハの塔に向かう
			{
				//▼第五部⑧ダーナと合流する　初回会話　は振り向かない
				//▼第五部③幽霊船を調べに向かう　初回会話　は振り向かない
				//▼第五部②バハの塔に向かう　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )		// クエスト用選択肢あり１	【QS521】巨大な怨敵（タナトス）
			{
				MenuAdd( 2, "【巨大な怨敵】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )		// クエスト用選択肢あり２	【QS602】白酒の調達（カシュー）
			{
				MenuAdd( 3, "【白酒の調達】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )		// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「文字入りの万年筆」を持った状態でタナトスに話しかけると
				//　　以下の選択肢。
				MenuAdd(4,"#333I文字入りの万年筆を渡す")
			}
			MenuAdd( -1, "やめる16")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Thanatos2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 【巨大な怨敵】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Thanatos_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)		// 【白酒の調達】について
			{
				//──────────────────────────────
				//【QS602】白酒の調達（カシュー）
				//▽タナトスに聞く
				//──────────────────────────────
				//　　※このプロセスをやらなくても、発酵樹液のＬＰは出現する。
				//　　※発酵樹液を３つとも手に入れると、このメッセージは出なくなる。
				//　　タナトスに話しかけると、
				//　　「【白酒の調達】について」という選択肢が追加される。
				//　　これを選ぶと以下のメッセージ。（カメラ切り替えはない）
				LookChr("this", "LEADER")
				
				TalkPopup("Thanatos",0,0,0,0,0)
				{
					//"#000e#000mふむ、#2C#329I発酵樹液#0Cを探すのか。"
					"#000e#000mふむ、『発酵樹液』を探すのか。"
					"あれは中々珍しいんじゃが……\p"
					"まあ、お前さんなら"
					"見つけられるかもしれんな。\p"
					"わしが見かけたのは"
					"沼地に生える種類の木でな。\p"
					"探すなら沼地を当たってみると"
					"いいかもしれんぞ。"
				}
				WaitPrompt()
				WaitCloseWindow()
				
				//　　※一度でもこのメッセージを見ると、
				//　　　発酵樹液のポイントにクエストマークがつく。
				
				// クエストマークの設置
				if( !FLAG[GF_QS602_SAP_A] )		//【QS602】▼発酵樹液を入手する を見た
				{
					SetMapMarker( SMI_QUEST, PAGE_MP230x, MARKER_QS_602_LP1, 91.28f,134.87f,-1.00f, 91.28f,134.87f,		MARKER_QS_602_LP1, MN_D_MP2304,	0)	// 【QS602】白酒の調達（カシュー）▽タナトスに聞く を見た場合に付く発酵樹液のポイント用
				}
				if( !FLAG[GF_QS602_SAP_B] )		//【QS602】▼発酵樹液を入手する を見た
				{
					//SetMapMarker( SMI_QUEST, PAGE_F002,   MARKER_QS_602_LP2, -36.63f,-632.52f,29.10f, -36.63f,-632.52f,	MARKER_QS_602_LP2, MN_F_MP2102,	0)	// 【QS602】白酒の調達（カシュー）▽タナトスに聞く を見た場合に付く発酵樹液のポイント用
					SetMapMarker( SMI_QUEST, PAGE_F002,   MARKER_QS_602_LP2, -32.80f,-637.87f,29.13f, -32.80f,-637.87f,	MARKER_QS_602_LP2, MN_F_MP2102,	1)	// 【QS602】白酒の調達（カシュー）▽タナトスに聞く を見た場合に付く発酵樹液のポイント用
				}
				if( !FLAG[GF_QS602_SAP_C] )		//【QS602】▼発酵樹液を入手する を見た
				{
					//SetMapMarker( SMI_QUEST, PAGE_F037,   MARKER_QS_602_LP3, -889.83f,885.71f,48.65f, -889.83f,885.71f,	MARKER_QS_602_LP3, MN_F_MP6114,	0)	// 【QS602】白酒の調達（カシュー）▽タナトスに聞く を見た場合に付く発酵樹液のポイント用
					SetMapMarker( SMI_QUEST, PAGE_F037,   MARKER_QS_602_LP3, -1053.95f,774.35f,104.29f, -1053.95f,774.35f,	MARKER_QS_602_LP3, MN_F_MP6114,	0)	// 【QS602】白酒の調達（カシュー）▽タナトスに聞く を見た場合に付く発酵樹液のポイント用
				}
			}
			else if (FLAG[TF_MENU_SELECT] == 4)		// 文字入りの万年筆を渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Thanatos")
				break
			}
			
			if( FLAG[GF_QS_EVENT_TMP] )	//1:クエストイベント発生
			{
				// イベント発生なら選択肢を抜ける。会話だけなら選択肢ループ。（「話をする」「○○○について」の両方から発生する可能性あり）
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// タナトス：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Thanatos2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
	
	CallFunc( "talk:Talk_Thanatos_LookReset" )		//向きリセット処理
}
