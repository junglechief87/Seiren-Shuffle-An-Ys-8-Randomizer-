// レーヤ：クエスト会話
function "Talk_Reja_Quest"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_401] == QUEST_NOTHING || FLAG[GF_QUEST_401] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		LookChr("this", "LEADER")
		
