// ■会話バルバロス船長
function "Talk_Barbaross"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( FLAG[GF_NPC_1_02_MEET_BARBAROSS] &&		//▼第一部②バルバロス船長と合流した
		FLAG[GF_01MP1101_DRAW_MAP] &&			// 地図を描いた
		!FLAG[GF_SPEEDRUN_MAP_COMP] )			// やり込み地図踏破率報告：地図踏破率１００％の報告をした
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x01 ) )	// 0x01:やり込み用選択肢あり
	}
	if( FLAG[GF_QUEST_200] == QUEST_BBS || FLAG[GF_QUEST_200] == QUEST_START )	// 【QS200】ベッドの作成（バルバロス）
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
	}
	if( FLAG[GF_QUEST_220] == QUEST_BBS || FLAG[GF_QUEST_220] == QUEST_START )	// 【QS220】見張り台の作成（バルバロス★必須）
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}
	if( FLAG[GF_QUEST_223] == QUEST_BBS || FLAG[GF_QUEST_223] == QUEST_START )	// 【QS223】ヒュッパーの掃討
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x40 ) )	// 0x40:クエスト用選択肢あり３
	}

////////////////////////////////////////////////////
// バルバロス：サブイベント
//
	if( FLAG[GF_02MP1201_START_HEARING] &&		// 聞き込みを開始した
		!FLAG[GF_SUBEV_NEMO_TALK_BARBAROSS] )	// 名無しについてバルバロス船長と話した
 	{
 		EventCue("mp1201:SubEV_02_Talk_Barbaross")	//	【名無しの聞き込み：バルバロス】
	}
	
	// 調薬チュートリアルイベント
	else if ( FLAG[GF_NPC_1_02_MEET_BARBAROSS] &&	//▼第一部②バルバロス船長と合流した
		 !FLAG[GF_02MP1202_GET_CLOTHES] &&		//▼第二部０チュートリアル中
		 !FLAG[GF_HELP_A11]) 					//▽ help_a11：調薬
	{
			EventCue("mp1201:SubEV_Help_Medicine")
	}
////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	else if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Barbaross2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// バルバロス船長：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if(	( FLAG[GF_NPC_2_18_WOUND_BARBAROSS] && !FLAG[GF_NPC_3_01_GOTO_LAXIA] )||										//▽第二部⑱バルバロスが致命傷を負った（浜辺）
				( FLAG[GF_NPC_2_17_CHASE_KIERGAARD] && !FLAG[GF_NPC_2_18_WOUND_BARBAROSS] &&	!FLAG[TF_BARBAROSS_TALK] )||	//▼第二部⑰キルゴールが正体を明かす
				( FLAG[GF_NPC_2_09_CHECK_LOOKOUT] && !FLAG[GF_NPC_2_10_JOIN_HUMMEL] &&			!FLAG[TF_BARBAROSS_TALK] )||	//▼第二部⑨見張り台を作成した
				( FLAG[GF_NPC_2_06_BEFORE_INTERCEPT] && !FLAG[GF_NPC_2_07_AFTER_INTERCEPT] &&	!FLAG[TF_BARBAROSS_TALK] ) )	//★第二部⑥迎撃戦①が発生
			{
				//▽第二部⑱バルバロスが致命傷を負った（浜辺）　は振り向かない
				//▼第二部⑰キルゴールが正体を明かす　初回会話　は振り向かない
				//▼第二部⑨見張り台を作成した　初回会話　は振り向かない
				//	★第二部⑥迎撃戦①が発生　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_0_03_ATTACK_SHIP] && !FLAG[GF_NPC_1_01_IN_BASE] ) )												//▼序③船が襲われる（夜）
			{
				//▼序③船が襲われる（夜）　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 0 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x01 )	// やり込み用選択肢あり
			{
				MenuAdd( 1 , "地図を見せる")
			}
			if( FLAG[TF_TALK_TYPE] & 0x10 )	// クエスト用選択肢あり１	【QS200】ベッドの作成（バルバロス）
			{
				MenuAdd( 10, "【ベッドの作成】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )	// クエスト用選択肢あり２	【QS220】見張り台の建設（バルバロス★必須）
			{
				MenuAdd( 11, "【見張り台の建設】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x40 )	// クエスト用選択肢あり３	【QS223】ヒュッパーの掃討
			{
				MenuAdd( 12, "【ヒュッパーの掃討】について")
			}
			MenuAdd( -1, "やめる20")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 0)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Barbaross2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 1)		// 地図を見せる
			{
				// 地図の報告
				LookReset( "this" )
				CallFunc( "talk:Talk_Speedrun_Barbaross" )
			}
			else if (FLAG[TF_MENU_SELECT] == 10)	// 【ベッドの作成】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Barbaross_Quest1" )
			}
			else if (FLAG[TF_MENU_SELECT] == 11)	// 【見張り台の建設】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Barbaross_Quest2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 12)	// 【ヒュッパーの掃討】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Barbaross_Quest3" )
			}
			
			if( FLAG[GF_QS_EVENT_TMP] )	//1:クエストイベント発生
			{
				// イベント発生なら選択肢を抜ける。会話だけなら選択肢ループ。（「話をする」「○○○について」の両方から発生する可能性あり）
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// バルバロス船長：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Barbaross2" )
		ResetStopFlag(STOPFLAG_TALK)
	}

	CallFunc( "talk:Talk_Barbaross_LookReset" )		//向きリセット処理
