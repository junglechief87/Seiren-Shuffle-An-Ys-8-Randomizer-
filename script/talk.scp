	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 1)
	LookSpd("Ricotta", 1.0f, 1.0f, 1.0f)
	LookSpd("Thanatos", 1.0f, 1.0f, 1.0f)
	LookChr( "Thanatos" , "Ricotta" )
	LookChr( "Ricotta" , "Thanatos" )
	CallFunc("system:talkevent_begin")		//TALK_BEGIN
	LookSpd("Ricotta", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	LookSpd("Thanatos", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
	//───────────────────────────────

	//　　★ＧＦ会話

	//　　※リコッタとタナトスが向かい合って話しており、
	//　　　それを見るアドルもカメラに写す

	PlayVoice(Y8V_3961,"Thanatos",100)	//そうじゃな…（平常のテンション。あらゆる場面で使用）

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mいいかリコッタ、船に乗って"
		"もし気持ち悪くなったら"
		"すぐにわしに言うんじゃぞ。\p"
		"その時は酔いに効くハーブを"
		"出してやるからの。"
	}
	WaitPrompt()
	WaitCloseWindow()

	PlayVoice(Y8V_2559,"RICOTTA",100)	//御意（平常のテンション。あらゆる場面で使用）

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#020e#080m御意……でも船で酔うものなのか？"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#011e#220mそりゃお前さんは初めてじゃが"
		"船ってのは大層揺れるからのう。"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#030e#000mフム、それ本で見た！"
		"船酔いとかいうヤツだな！"
	}
	WaitPrompt()
	WaitCloseWindow()

	PlayVoice(Y8V_3967,"Thanatos",100)	//ほう…！（驚き）

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#070e#000mほう、よく知っておったのう。"
	}
	WaitPrompt()
	WaitCloseWindow()

	PlayVoice(Y8V_2564,"RICOTTA",100)	//なはは（楽しそうに）

	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#020e#080mにゃはは、ワクワクが止まらない。"
		"リコッタ、船酔い楽しみ！"
	}
	WaitPrompt()
	WaitCloseWindow()

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mフム？"
	}
	WaitPrompt()
	WaitCloseWindow()


	TalkPopup("Ricotta",0,0,0,0,0)
	{
		"#030e#080mサハドみたいに歌ったり踊ったり"
		"楽しくなったりする！\p"
		"#020eリコッタ、前から"
		"酔っ払いになってみたかった！"
	}
	WaitPrompt()
	WaitCloseWindow()

	ChangeSubAnimation("Thanatos",SUBMOT_EYE,ANI_E_LAUGH,1)
	EmotionEx("Thanatos", 0.00f, EMO_TARA, 0, 5, 1, 1, 1.0f)	//冷や汗
	Wait(50)

	SetFlag( GF_07MP1201_TALK_RICOTTA, 1 )	// 漂流村を回ってみる後（リコッタと話した）
	SetFlag( GF_1STTALK_7_01_RICOTTA, 1 )	// リコッタ、タナトスの共通会話ＧＦ初回
	SetChrWork("Thanatos", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Thanatos", CWK_DEFAULT_SKIPNODE_OFF, 2)
	SetChrWork("Ricotta", CWK_SCRIPTPAUSE, 2)
	SetChrWork("Ricotta", CWK_DEFAULT_SKIPNODE_OFF, 2)
	LookChr( "Thanatos" , "Ricotta" )
	LookChr( "Ricotta" , "Thanatos" )
	SetChrInfoFlag( "ADOL" ,INFOFLAG_INVISIBLE)	//アドルを消す
	SetChrPos("LEADER",24.62f,-1419.44f,10.83f)	//リーダーキャラをアドルの位置に移動
	Turn("LEADER",-57.47f,360.0f)
	CallFunc("system:talkevent_end")		//TALK_END
	SetStopFlag(STOPFLAG_TALK)
	SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	
	if (FLAG[GF_07MP1201_TALK_HUMMEL] && FLAG[GF_07MP1201_TALK_RICOTTA] && FLAG[GF_07MP1201_TALK_SAHAD]) {
		// 漂流村を回ってみる後 ヒュンメル サハド リコッタと会話したら進行
		EventCue("talk:EV_M07S002a")
	}
	
}

