// リコッタ：クエスト会話
function "Talk_Ricotta_Quest"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_400] == QUEST_NOTHING || FLAG[GF_QUEST_400] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		LookChr("this", "LEADER")
		
		//──────────────────────
		//	⇒「GF_04MP6101_MAKE_CAMP」が立っている＝リコッタがアドル兄と呼ぶ
		if( FLAG[GF_04MP6101_MAKE_CAMP] )
		{
			TalkPopup("Ricotta",0,0,0,0,0)
			{
				"#000e#000mアドル兄、ちょっと話す！"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		//	⇒立っていない
		else
		{
			TalkPopup("Ricotta",0,0,0,0,0)
			{
				"#000e#000mアドル、ちょっと話す！"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		//──────────────────────
		
		//　　画面暗転を挟んで、浜辺の高台。
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_400_Start")		// 【QS400】ししょーへの献上（リコッタ）	▼クエスト開始イベント
	}
	// 「▼クエスト用会話」
	else
	{
		//▼クエスト達成前
		
		if( FLAG[GF_NPC_4_01_GOTO_NORTH] &&			//▼第四部①島北部に足を踏み入れた
			!FLAG[GF_NPC_4_01_OCCUR_INTERCEPT7] &&	//！☆第四部Ｆ迎撃戦⑦が発生
			!FLAG[GF_NPC_4_02_SEE_THANATOS] &&
			!FLAG[TF_RICOTTA_QS_TALK] )
		{
			//　　※「▼第四部①島北部に足を踏み入れた」時のみカメラ切り替え
			//──────────  一般・開始処理  ────────────
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			ResetStopFlag(STOPFLAG_TALK)
			SetStopFlag(STOPFLAG_TALK2)
			//Wait(1)		// 選択肢あり時用
			//───────────────
			//	場所		：中央上段・高台
			//───────────────
			//	配置・カメラ：
			//	モーション	：
			//───────────────
			SaveCamera()
			ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
			SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
			RollCamera( 0 , 0.0f , 0 )		// ロール回転
			MoveCameraAt( 0 , -13.812f , -1513.240f , 9.201f , 0 )	// 注視点
			MoveCamera( 0 , -13.344f , -1512.406f , 9.491f , 0 )		// 視点
			
			//キャラ初期動作の記述
			ChangeSubAnimation("Ricotta",SUBMOT_EYE,ANI_E_ANGER_CLOSE,1)
			LookSpd("this", 1.0f, 1.0f, 1.0f)
			LookTo("Ricotta", -13.344f , -1512.406f , 9.491f )	// 首を正面に向ける
			Turn("Ricotta", -128.40f, 360.0f)
			CallFunc("system:talkevent_begin")		//TALK_BEGIN
			LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
			//───────────────────────────────
		}
		else
		{
			//　　※カメラ切り替えなし
			LookChr("this", "LEADER")
		}
		
		if( !FLAG[TF_RICOTTA_QS_TALK] )
		{
			TalkPopup("Ricotta",0,0,0,0,0)
			{
				"#040e#000mリコッタ、最近よく思う。"
				"もっともっと強くなりたい。\p"
				"#030e早く『完熟マンゴー』持って、"
				"ししょーのところ行く！\p"
				"そして稽古、付けてもらう！"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし
			TalkPopup("Ricotta",0,0,0,0,0)
			{
				"#000e#000m早く『完熟マンゴー』持って、"
				"ししょーのところ行く！\p2"
				"そして稽古、付けてもらう！2"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		
		if( FLAG[GF_NPC_4_01_GOTO_NORTH] &&			//▼第四部①島北部に足を踏み入れた
			!FLAG[GF_NPC_4_01_OCCUR_INTERCEPT7] &&	//！☆第四部Ｆ迎撃戦⑦が発生
			!FLAG[TF_RICOTTA_QS_TALK] )
		{
			Turn("Ricotta", 8.40f, 360.0f)
			CallFunc("system:talkevent_end")		//TALK_END
			SetStopFlag(STOPFLAG_TALK)
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		}
		
		SetFlag( TF_RICOTTA_QS_TALK, 1 )
	}
}
