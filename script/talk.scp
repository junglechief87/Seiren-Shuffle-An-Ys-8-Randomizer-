	SaveEventState()
	SaveCamera()

	ResetMotion("Barbaross" , 1 )
	LookSpd("Barbaross", 1.0f, 1.0f, 1.0f)
	LookReset( "Barbaross" )

	CallFunc("system:party_reset")
