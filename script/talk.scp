			LoadArg("map/mp1201t3/mp1201t3.arg")
		}
		else
		{
			LoadArg("map/mp1201/mp1201.arg")
		}
		EventCue("mp1201:QS_232_Complete")		// 【QS232】闇夜の怪（漂流村／夜D）	▼クエスト完了イベント
	}
	else
