function "Talk_Austen"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( ALLITEMWORK[ICON3D_PRESENT_AUSTEN] &&	//「七色の顔料」
		FLAG[GF_NPC_3_02_GOTO_GENSD] )			// 発生タイミング：▼第三部②ジャンダルムに向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if (FLAG[GF_QUEST_522] == QUEST_BBS || FLAG[GF_QUEST_522] == QUEST_START)	// 【QS522】奮起の演奏会（オースティン） クエスト達成失敗前
	{
		//「▼第五部④大空洞へ向かう」を過ぎた後
		if (FLAG[GF_NPC_5_05_BEFORE_INTERCEPT10])// ☆第五部⑤迎撃戦⑩（対オケアノス）が発生
		{
			//　【奮起の演奏会】について	＞「▼クエスト用会話」に接続			※「▼第五部④大空洞へ向かう」を過ぎた後に出現
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
		}
	}
	if( FLAG[GF_QUEST_522] == QUEST_START &&
		ALLITEMWORK[ICON3D_BLUE_SCORE] >= 1 )	// 【QS522】奮起の演奏会（オースティン） 「蒼き豊穣の楽譜」×１を持っている
	{
		//　『蒼き豊穣の楽譜』を渡す		＞「▼クエスト達成イベント」に接続		※クエスト開始イベントを確認、かつアイテムを持っていると出現
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}
	if( FLAG[GF_SPEEDRUN_LOC_1STTALK] && !FLAG[GF_SPEEDRUN_LOC_COMP] )	// やり込み初回会話後～全て発見したイベントを見るまで
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x100 ) )	// 0x100:やり込み用選択肢あり
	}

	CallFunc("talk:Speedrun_Austen_Calc")		// TF_MENU_SELECTに発見したロケーション数が入る

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Austen2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// オースティン：やり込み：ロケーション報告
	else if( ( FLAG[DF_JOIN_AUSTEN] ) &&				// オースティンと合流した
			(( !FLAG[GF_SPEEDRUN_LOC_1STTALK] )||		// オースティン初回会話
			 ( !FLAG[GF_SPEEDRUN_LOC_HALF] && FLAG[TF_MENU_SELECT] >= 12 )||	// ロケーションを半分発見してアイテムを貰った
			 ( !FLAG[GF_SPEEDRUN_LOC_COMP] && FLAG[TF_MENU_SELECT] == 24 )) )	// ロケーションを半分発見してアイテムを貰った
	{
		// やり込み処理
		CallFunc( "talk:Speedrun_Austen" )		// オースティン：やり込み
	}
////////////////////////////////////////////////////
// オースティン：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_AUSTEN] &&			// 親愛イベントを見た
		FLAG[GF_NPC_5_04_GOTO_HOLLOW] &&				//▼第五部④大空洞へ向かう
		FLAG[GF_LIKELV_AUSTEN] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
	//	ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
	//	WaitThread(1000)
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("Austen", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Austen",0,0,0,0,0)
		{
			"#000e#000mアドル、少し場所を変えて"
			"話せるだろうか。"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Austen")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// オースティン：メインイベント
//
//
////////////////////////////////////////////////////
// オースティン：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）
			if( ( FLAG[GF_NPC_7_03_CHECK_VILLAGE] &&									!FLAG[TF_AUSTEN_TALK] )||	//▼エピローグ③漂流村を最後に見回る
				( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] &&		!FLAG[TF_AUSTEN_TALK] ) )	//▼第五部⑥宴の漂流村を散策（夜）
			{
				//▼エピローグ③漂流村を最後に見回る　初回会話　は振り向かない
				//▼第五部⑥宴の漂流村を散策（夜）　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")	// 選択肢選択中は首だけ向かせる
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )	// クエスト用選択肢あり１	【QS522】奮起の演奏会（オースティン）
			{
				MenuAdd( 2, "【奮起の演奏会】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x100 )	// やり込み用選択肢あり
			{
				MenuAdd( 3, "《ロケーションポイント》について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )	// クエスト用選択肢あり２	【QS522】奮起の演奏会（オースティン）
			{
				MenuAdd( 4, "#323I蒼き豊穣の楽譜を渡す")	
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
