	SetDiaryShopFlag(SHOP_ID_JUICE,1)// 素材手帳へのリンクをON

	CallFunc("system:SetMarkerNPC")		//ＮＰＣマーカーセット

	ResetPartyPos()
	ResetFollowPoint()
	//Wait(1) //処理待ち用

	RestoreCamera(0,0)
	CallFunc("system:camera_reset")

	//ぼかし解除
	CallFunc("system:boke_end")

//終了処理ここまで----------------------------------------------------
}


