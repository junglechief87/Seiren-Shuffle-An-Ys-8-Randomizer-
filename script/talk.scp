		FLAG[GF_NPC_5_02_GOTO_BAHA] )			// 発生タイミング：▼第五部②バハの塔に向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	else if( ALLITEMWORK[ICON3D_PRESENT_DANA2] &&	//「小さな金の理晶柱」
		FLAG[GF_NPC_5_04_GOTO_HOLLOW] )				// 発生タイミング：▼第五部④大空洞へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}

////////////////////////////////////////////////////
