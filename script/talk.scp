	else if( !FLAG[GF_SUBEV_SINAI_ED] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_02_GOTO_GEND] &&				//▼第六部②ジャンダルム頂上へ向かう
		!FLAG[TF_ED_PRESENT_TALK] &&				//※マップ切り替えるまではエド・アリスンの親愛が起きなくする特殊フラグ
		FLAG[GF_LIKELV_ALISON] >= 2 && FLAG[GF_LIKELV_ED] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
	//	ExecuteCmd(1000, TurnToChr, "Alison", "LEADER", 8.0f )	// 操作キャラに向かせる
	//	ExecuteCmd(1001, TurnToChr, "Ed", "LEADER", 8.0f )	// 操作キャラに向かせる
	//	WaitThread(1000)
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("Alison", "LEADER")
		LookChr("Ed", "LEADER")
		
		//　　アリスンとエドの好感度が共にＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Alison",0,0,0,0,0)
		{
			"#000e#000mあの、アドルさん。"
		}
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("Ed",0,0,0,0,0)
		{
			"#000e#000mよければ一緒にお茶でもどうかな？"
		}
		WaitPrompt()
		WaitCloseWindow()

		Wait(20)

		StopBGM(90)
		SetFlag(SF_NOCHANGEBGM, 1)

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		SetFlag(GF_MP1202_NOW,1)		//屋内に直接飛ぶ場合
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Alison")

		SetEnvSEPlayState(-1, 0)	//環境SE全停止
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// エド：メインイベント
//
//
////////////////////////////////////////////////////
// エド：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if( ( FLAG[GF_NPC_6_03_OCCUR_INTERCEPT12] && !FLAG[GF_NPC_7_01_GOTO_TEM] &&				!FLAG[TF_ALISON_TALK] )||	//★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）　～　▼第六部④想剣ミストルティンを入手
				( FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] && !FLAG[GF_NPC_6_02_GOTO_GEND] &&			!FLAG[TF_ED_TALK] )||	//★第六部①迎撃戦⑪が発生
				( FLAG[GF_NPC_5_08_MEET_DANA] && !FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] &&			!FLAG[TF_ED_TALK] ) )	//▼第五部⑧ダーナと合流する
			{
				//☆第六部Ｆ迎撃戦⑫を済ませた　～　▼第六部④想剣ミストルティンを入手　初回会話　は振り向かない
				//	★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）　初回会話　は振り向かない
				//	★第六部①迎撃戦⑪が発生　初回会話　は振り向かない
				//▼第五部⑧ダーナと合流する　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] &&				!FLAG[TF_ED_TALK] )||	//▼第五部⑥宴の漂流村を散策（夜）
					( FLAG[GF_NPC_5_03_AFTER_INTERCEPT9] && !FLAG[GF_NPC_5_04_GOTO_HOLLOW] &&		!FLAG[TF_ED_TALK] ) )	//☆第五部Ｆ迎撃戦⑨を済ませた
			{
				//▼第五部⑥宴の漂流村を散策（夜）　初回会話　は振り向かない
				//	☆第五部Ｆ迎撃戦⑨を済ませた　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")	// 選択肢選択中は首だけ向かせる
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )		// クエスト用選択肢あり１	【QS520】真紅の産衣（エド）
			{
				MenuAdd( 2, "頼まれていた素材を渡す")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「小さなルビー」を持った状態でエドに話しかけると
				//　　以下の選択肢。
				MenuAdd(3,"#333I小さなルビーを渡す")
