	Wait(1)
	LookSpd("Miralda", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)

	CallFunc("system:party_reset")
	ResetChrPos((CHRTYPE_NPC | REMOVE_POS))

	//インフォフラグ、キャラワーク
	SetChrInfoFlag( "ADOL" , INFOFLAG_NOGRAVITY )
	SetChrInfoFlag( "ADOL" , INFOFLAG_NOCHRATARI)
	SetChrInfoFlag( "ADOL" , INFOFLAG_NOMAPATARICHECK )
	SetChrInfoFlag( "Miralda" , INFOFLAG_NOGRAVITY )
	SetChrInfoFlag( "Miralda" , INFOFLAG_NOCHRATARI)
	SetChrInfoFlag( "Miralda" , INFOFLAG_NOMAPATARICHECK )
	SetChrWork("ADOL", CWK_DEFAULT_SKIPNODE_OFF, 1)
	SetChrWork("Miralda", CWK_DEFAULT_SKIPNODE_OFF, 1)

	//キャラ位置は原点
	SetChrPos("Miralda",0.00f,0.00f,0.00f)
	Turn("Miralda",18.23f,360.0f)
	LookTo("Miralda", -0.166f , -2.564f , 1.421f )
	LookSpd("Miralda", 1.0f, 1.0f, 1.0f)
	Wait(1)
	LookSpd("Miralda", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)

	//初期モーション
	ChangeSubAnimation("Miralda",SUBMOT_EYE,ANI_E_WAIT,1)
	ChangeSubAnimation("Miralda",SUBMOT_MOUTH,ANI_M_SMILE,1)
	ChangeSubAnimation("Miralda",SUBMOT_EXT1,ANI_E_LOOKC,1)

	//カメラ位置（キャラの大きさによって調整してください）
	MoveCameraAt( 0 , -0.166f , -0.334f , 1.438f , 0 )	// 注視点
	ChangeCameraDistance( 0 , 2.230f , 0 )		// 基本距離
	ChangeCameraElevation( 0 , -0.437f , 0 )	// 基本仰角
	RotateCamera( 0 , 0.000f , 0 )				// 角度					//角度は必ず0
	ChangeCameraPers( 0 , 25.000f , 0 )			// 視野角
	SetCameraZPlane( 0.100f , 300.000f )			// ZPlane
	RollCamera( 0 , 0.0f , 0 )				// ロール回転
	// ResetCameraZPlane()	// イベント終了時に呼び出して下さい。マップ側の設定に戻します。

	// 被写界深度の設定
	SetDoF(0, LERP_LINEAR, 0.000, 0.100 ,0.000 ,0.000 ,0.000)

	// グレアの設定
	SetGlare(0, LERP_LINEAR, 0.500, 1.300 ,0.500 ,1.000 ,0.600 ,0.000 ,1.000)

	//シャドウ消去
	SetShadowOffset( -10000 )

	//イベントスキップ許可
	SetSkipScript("talk:SubEV_Help_Veggies_ED")

//バストショット処理ここまで-----------------------------------------------

	Wait(10)

	//──────────────────────────────
	//▼野菜ジュースチュートリアル
	//──────────────────────────────
	//　　ミラルダ加入後、初回会話時に
	//　　バストアップイベントが起動。

	ChangeAnimation( "Miralda" , "ANI_EV_UDEGUMI_S", -1 , 1 )

	TalkPopup("Miralda",0,1,280,190,0)
	{
		"#000e#000mそれにしてもアドル君たちは"
		"毎日飛び回って大変よね。\p"
		"きちんとした食事はできてる？"
	}
	WaitPrompt()
	WaitCloseWindow()

	ChangeAnimation( "Miralda" , "ANI_EV_UDEGUMI_E", -1 , 1 )

	Wait(5)

	//選択肢
	SetFlag(TF_MENU_SELECT,0)
	MenuReset()
	MenuType(MENUTYPE_POPUP)
	MenuAdd(1,"いつも料理してるよ")
	MenuAdd(2,"果物ばかりだ")
	MenuOpen( TF_MENU_SELECT , -1 , ADOLMENU_PPOSY , -2 , -2 , 10 , 0)
	WaitMenu(0)
	MenuClose(10,0)

	Wait(10)
	WaitAnimation2( "Miralda" , -1, 1, "ANI_EV_UDEGUMI_E",  0)
	ChangeAnimation( "Miralda" , "ANI_EV_RYOTEKOSI_S", -1 , 1 )

	//────────────────────
	//	⇒いつも料理してるよ
	if(FLAG[TF_MENU_SELECT] == 1)
	{
		TalkPopup("Miralda",0,1,280,190,0)
		{
			"#000e#080mおっ、偉いわね。\p"
			"#021e男の子が料理できるのは"
			"ポイント高いわよ㈱\p"
			"#062e#000mでも、よく見ると目の下に"
			"クマが出来ているわね。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	else if(FLAG[TF_MENU_SELECT] == 2)
	{
		//	⇒果物ばかりだ
		TalkPopup("Miralda",0,1,280,190,0)
		{
			"#051e#000mやっぱりそうよね。\p"
			"よく見ると目の下に"
			"クマが出来ているもの。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//────────────────────

	TalkPopup("Miralda",0,1,280,190,0)
	{
		"#061e#000m取れる食材は限られるし"
		"栄養に偏りが出ちゃうわよね……"
	}
	WaitPrompt()
	WaitCloseWindow()
	
	Wait(10)

	//　　ミラルダに「ＰＡ」エモーション。
	EmotionEx("Miralda", 0.00f,EMO_PA,0,5,1,1,1.0f )
	ChangeSubAnimation("Miralda",SUBMOT_EYE,ANI_E_SUP_S,1)

	Wait(35)

	ChangeAnimation( "Miralda" , "ANI_EV_RYOTEKOSI_E", -1 , 1 )

	TalkPopup("Miralda",0,1,280,190,0)
	{
		"#072e#080mそうだ、野菜を持って来てくれたら"
		"野菜ジュースを作ってあげるわ。\p"
		"栄養も取れるし、お腹が"
		"スッキリして食欲も出るわよ。\p"
	}
	WaitPrompt()
	WaitCloseWindow()

	WaitAnimation2( "Miralda" , -1, 1, "ANI_EV_RYOTEKOSI_E",  0)
	ChangeAnimation( "Miralda" , "ANI_EV_TEBURI", -1 , 1 )

	TalkPopup("Miralda",0,1,280,190,0)
	{

		"#021eうんうん、それがいいわ。\p"
		"#022e愛情たっぷりに作ってあげるから、"
		"いつでも来るのよ♪"
	}
	WaitPrompt()
	WaitCloseWindow()

	PlaySE(SE_TUTORIAL, 100, 0, 0, 0, 1.0f, 0)	//チュートリアル

	// システムメッセージ
	TalkPopup(UNDEF, 0, 5, 0, 0, 0)
	{

		"#-1W#4Cミラルダが野菜ジュースを"
		"#-1W#4C作ってくれるようになった！#10W"
	}
	Wait(10)
	WaitPrompt()
	WaitCloseWindow()

	//　　フェードアウトしてバストアップイベントの終了。

//　　イベント終了、操作許可。

	FadeOut(FADE_BLACK,FADE_NORMAL)
	WaitFade()

//終了処理ここから----------------------------------------------------
	CallFunc("talk:SubEV_Help_Veggies_ED")
}
function "SubEV_Help_Veggies_ED"
{
	//終了処理はスキップ禁止
	SetSkipScript("")

	//イベント前の状態を復帰
	RestoreEventState()

	//キャラクター初期化
	CallFunc("system:reset_chrmot_ADOL")
	CallFunc("system:reset_chrmot_Miralda")

	//一般配置の復帰
	CallFunc("talk:NpcPosition")

	//マップパラメーターリセット
	ResetMapParam( -1 )

	SetShadowOffset( 0 )

	//パーティキャラを解放
//	ReleaseEventPartyChr()

	//フラグ立て・アイテム回収
	SetFlag( GF_SUBEV_HELP_VEGG, 1 )	// アウラ草をディナから聞いた
