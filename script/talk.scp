// ハシビロコウ：やり込み

//▼ハシビロコウ汎用処理
function "Talk_Speedrun_Rex"
{
	//	------------------------------------------------------------
	//▼ハシビロコウ汎用処理・料理を全て渡す前
	if( !FLAG[GF_SPEEDRUN_FISH_24OVER]		// やり込み魚渡し：２４種類渡した
		|| !FLAG[GF_SPEEDRUN_FISH_PRESENT24] || !FLAG[GF_SPEEDRUN_FISH_PRESENT25]
		|| !FLAG[GF_SPEEDRUN_FISH_PRESENT26] || !FLAG[GF_SPEEDRUN_FISH_PRESENT27] )
	{
		//───────────────
		//	場所		：外れ・その他
		//───────────────
		//	配置・カメラ：ハシビロコウ基本Ａ
		//	モーション	：
		//───────────────
		//　　「▼第二部④アリスンを助けた」以降、漂流村に配置。
		//　　※特定のフラグ時のみ専用処理となるが、
		//　　　それ以外のタイミングはこの汎用処理に流れる。

		TalkPopup("Rex",0,1,240,200,0)
		{
			"#000e#000m…………………………"
		}
		WaitPrompt()
		WaitCloseWindow()
	
		//	ナレーション
		TalkPopup(UNDEF,0,3,STOPPER_PPOSX,STOPPER_PPOSY,0)
		{
			"#7Cハシビロコウは、"
			"#7Cじっとこちらを見つめている。"
		}
		WaitPrompt()
		WaitCloseWindow()
	
		SetFlag(TF_MENU_SELECT, 0)
		while (FLAG[TF_MENU_SELECT] != -1)	//ループ選択肢
		{
			CallFunc("talk:Menu_Rex")
		}
	}
	//	------------------------------------------------------------
	//▼ハシビロコウ汎用処理・料理を全て渡した後
	else
	{
		TalkPopup("Rex", 0, 1, 240, 200, 0)
		{
			"#000e#000m……グァ……グァ…………"
		}
		WaitPrompt()
		WaitCloseWindow()
	
		//	ナレーション
		TalkPopup(UNDEF, 0, 3, SYSTEM_PPOSX, SYSTEM_PPOSY, 0)
		{
			"#7Cハシビロコウは満足気だ。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//	------------------------------------------------------------
}
