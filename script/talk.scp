function "Talk_Barbaross_Quest3"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	//　　★未討伐の場合
	if( !FLAG[GF_QS223_KILL_MONS] )			//【QS223】ヒュッパーの掃討 モンスターを討伐した
	{
		LookChr("this", "LEADER")
		
		TalkPopup("Barbaross",0,0,0,0,0)
		{
			"#000e#000mああ、ヒュッパーの件だな。\p"
			"パロによると、奴らは驚異的な"
			"繁殖力を持っているようでな。\p"
			"このまま放置していると、"
			"危険な障害になりかねん。\p"
			"なので群れを見つけたら、"
			"文字通り掃討して欲しいのだ。"
			"どうかよろしく頼んだぞ。5"
		}
		WaitPrompt()
		WaitCloseWindow()

		//──────────────────────
		//⇒マーカーがセットされていない場合
		if( !FLAG[GF_QS223_SET_MARKER] )		//【QS223】ヒュッパーの掃討 マーカーをセットした
		{
			SetMapMarker( SMI_QUEST, PAGE_F001, MARKER_QS_223_LP,	35.50f,-898.50f,30.86f, 	35.50f,-898.50f,	MARKER_QS_223_LP, MN_F_SOUTHWEST_PLANE_MP1106,	0)	// 【QS223】ヒュッパーの掃討　モンスターの居場所用
			
			PlaySE(SE_EV_POINT, 100, 0, 0, 0, 1.0f, 0)	//マップ登録

			//システムメッセージ
			TalkPopup(UNDEF,0,5,0,0,0)
			{
				"#8S"
				"#-1W#4C獣の居場所が地図に記された。#10W" 
				"#8S"
			}
			Wait(10)
			WaitPrompt()
			WaitCloseWindow()
			
			SetFlag( GF_QS223_SET_MARKER, 1 )		//【QS223】ヒュッパーの掃討 マーカーをセットした
		}
		//──────────────────────
	}
	//　　★討伐済みの場合
	else
	{
		LookChr("this", "LEADER")
		
		PlayVoice(Y8V_3736, "Barbaross", 100)	//ふふ（微笑）
		TalkPopup("Barbaross",0,0,0,0,0)
		{
			"#000e#000mほう、ヒュッパーを"
			"掃討したようだな。\p"
			"流石はアドル、見事な手際だ。\p"
			"では報酬を渡しておこう。"
			"また何かあればよろしく頼んだぞ。"
		}
		WaitPrompt()
		WaitCloseWindow()
	
		PlaySE(SE_QUEST_END, 100, 0, 0, 0, 1.0f, 0)		// クエスト達成	
		//	ナレーション
		TalkPopup(UNDEF, 0, 5, 0, 0, 0)
		{
			"#8S"
			"#-1W#4Cクエスト#8C【ヒュッパーの掃討】#4Cを達成した！#10W"
			"#8S"
		}
		Wait(10)
		CallFunc("system:QuestVoice_Success")
		WaitPrompt()
		WaitCloseWindow()

		//	アイテム入手テキスト
		//「命の霊薬を手に入れた。」
		GetItem(ICON3D_US_ADD_HP, 1)	//命の霊薬
		GetItemMessageExPlus(ICON3D_US_ADD_HP, 1, ITEMMSG_SE_JINGLE, "を手に入れた。", 0, 0)	//命の霊薬
		WaitPrompt()
		WaitCloseWindow()
	
		SetFlag( GF_QUEST_223, QUEST_SUCCESS )	//【QS223】ヒュッパーの掃討 モンスターを討伐した
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生（メニューを抜ける）
		SetFlag( GF_FAME_POINT, (FLAG[GF_FAME_POINT] + 1) )			//クエスト達成【QQS223】ヒュッパーの掃討	名声値+1
		SetDiaryFlag( DF_QS223_END, 1 )			//【QS223】★獣討伐の報告を行った！
		CallFunc("system:SetMarkerNPC")		//マーカーのリセット
	}
}
