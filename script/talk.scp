// 会話衛士ラステル
function "Talk_Rastell"
{
	//【QS522】奮起の演奏会（オースティン）
	if( FLAG[GF_QUEST_522] == QUEST_START &&
		FLAG[GF_QS522_TALK_SERACH2] &&		//【QS522】▼楽譜探しイベント② を見た
		!FLAG[GF_QS522_TALK_SERACH3] )		//【QS522】▼楽譜探しイベント③ を見た
	{
		//──────────────────────────────
		//▼楽譜探しイベント③
		//──────────────────────────────
		//　　過去編のどこでもいいので、
		//　　ラステルに話しかけるとイベント開始。
		
		LookChr("this", "LEADER")

		//	ラステル
		TalkPopup("this",0,0,0,0,0)
		{
			"#000e#000mあれ、巫女様。"
			"一体どうなさったんですか？"
		}
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("LEADER",0,0,0,0,0)
		{
			"#000e#000mええ、実は『蒼き豊穣』の楽譜を"
			"探しているのですが……\p"
			"もし持っていたら、"
			"貸して貰えないかと思いまして。"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	ラステル
		TalkPopup("this",0,0,0,0,0)
		{
			"#000e#000m楽譜なら確かに持ってますけど……\p"
			"お貸しするだなんて水臭い。"
			"これは巫女様に差し上げますよ。"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	アイテム入手メッセージ
		//	「『蒼き豊穣の楽譜』を手に入れた！」
		GetItemMessageExPlus(ICON3D_BLUE_SCORE, 1, ITEMMSG_SE_JINGLE, "を手に入れた！", 0, 0)
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("LEADER",0,0,0,0,0)
		{
			"#000e#000mまあ！　ありがとう。\p"
			"けれど本当に"
			"貰ってしまっていいのですか？"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	ラステル
		TalkPopup("this",0,0,0,0,0)
		{
			"#000e#000mええ、それに僕には楽器の"
			"才能がないって分かりましたし……\p"
			"教養として学ぶつもりだったのですが"
			"なかなか身に着かなくて……"
		}
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("LEADER",0,0,0,0,0)
		{
			"#000e#000mそうですね……\p"
			"私も竪琴はそれなりですが……"
			"笛は結構得意な方だったりします。\p"
			"だからラステルにもきっと"
			"自分に合った楽器があると思いますよ。"
		}
		WaitPrompt()
		WaitCloseWindow()

		//	ラステル
		TalkPopup("this",0,0,0,0,0)
		{
			"#000e#000m巫女様……\p"
			"なるほど、確かにそういうことも"
			"あるかもしれませんよね。\p"
			"機会があれば、"
			"ぜひまた何かに挑戦してみますね。"
		}
		WaitPrompt()
		WaitCloseWindow()

		TalkPopup("LEADER",0,0,0,0,0)
		{
			"#000e#000mええ、頑張ってください！\p"
			"#0L#12S（さてと、目的の楽譜が"
			"#0L#12S　無事に手に入ったね。）\p"
			"#0L#12S（あとは……）"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetEnvSEPlayState(-1, 0)	//環境SE全停止
		// フェードアウト
		FadeOut(FADE_BLACK, FADE_NORMAL)
