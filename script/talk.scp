////////////////////////////////////////////////////
// フランツ：メインイベント
//
//
////////////////////////////////////////////////////
// フランツ：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	if文が長すぎるとエラーが出てしまうので、分割してあります
			if( FLAG[GF_NPC_6_03_OCCUR_INTERCEPT12] &&
				(!FLAG[GF_NPC_6_03_AFTER_INTERCEPT12] && !FLAG[GF_NPC_6_04_GET_MISTILTEINN]) &&			!FLAG[TF_FRANZ_TALK] )		//★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）
			{
				//	★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] && !FLAG[GF_NPC_6_02_GOTO_GEND] &&			!FLAG[TF_FRANZ_TALK] )||	//★第六部①迎撃戦⑪が発生
					( FLAG[GF_NPC_5_08_MEET_DANA] && !FLAG[GF_NPC_6_01_BEFORE_INTERCEPT11] &&			!FLAG[TF_FRANZ_TALK] )||	//▼第五部⑧ダーナと合流する
					( FLAG[GF_NPC_5_07_GOTO_VALLAY] && !FLAG[GF_NPC_5_08_MEET_DANA] &&					!FLAG[TF_FRANZ_TALK] )||	//▼第五部⑦王家の谷へ向かう
					( FLAG[GF_NPC_0_02_START_PATROL] && !FLAG[GF_NPC_0_03_ATTACK_SHIP] ) )											//▼序②船内を巡回する（夜）
			{
				//	★第六部①迎撃戦⑪が発生　初回会話　は振り向かない
				//▼第五部⑧ダーナと合流する　初回会話　は振り向かない
				//▼第五部⑦王家の谷へ向かう　初回会話　は振り向かない
				//▼序②船内を巡回する（夜）　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )	// クエスト用選択肢あり１	【QS601】冒険家への依頼（フランツ）
			{
				MenuAdd( 2, "【冒険家への依頼】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「年代物のティーセット」を持った状態でフランツに話しかけると
				//　　以下の選択肢。
				MenuAdd(3,"#333I年代物のティーセットを渡す")
			}
			MenuAdd( -1, "やめる22")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Franz2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 【冒険家への依頼】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Franz_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)		// 年代物のティーセットを渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Franz")
				break
			}
			
			if( FLAG[GF_QS_EVENT_TMP] )	//1:クエストイベント発生
			{
				// イベント発生なら選択肢を抜ける。会話だけなら選択肢ループ。（「話をする」「○○○について」の両方から発生する可能性あり）
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// フランツ：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
