//---------------------------------------------------------------
// ■会話シルヴィア
function "Talk_Silvia"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( ALLITEMWORK[ICON3D_PRESENT_SILVIA] &&	//「闘士の鞘」
		FLAG[GF_NPC_6_02_GOTO_GEND])		//発生タイミング：▼第六部②ジャンダルム頂上へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if (FLAG[GF_QUEST_611] == QUEST_BBS || FLAG[GF_QUEST_611] == QUEST_START)	// 【QS611】老いらくの剣（シルヴィア） クエスト達成失敗前
	{
		//「☆第六部Ｆ迎撃戦⑫を済ませた」を過ぎた後
		if (FLAG[GF_NPC_6_04_GET_MISTILTEINN])	//☆第六部Ｆ迎撃戦⑫を済ませた
		{
			//　【老いらくの剣】について		＞「▼クエスト用会話」に接続			※「▼第六部④想剣ミストルティンを入手」を過ぎた後に出現
			//		◆↓下として処理してあります（文章通りだと期限切れになってしまうので）
			//　【老いらくの剣】について		＞「▼クエスト用会話」に接続			※「☆第六部Ｆ迎撃戦⑫を済ませた」を過ぎた後に出現
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
		}
	}
	
////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if (!FLAG[GF_TBOX_DUMMY110])
	{
		SetStopFlag(STOPFLAG_SIMPLEEVENT2)
		SetFlag( TF_MENU_SELECT, 0 )
		YesNoMenu(TF_MENU_SELECT,"#7CBattle Silvia?",1)
		
		//──────────────────────
		//　⇒支援要請を出す
		if( FLAG[TF_MENU_SELECT] )
		{
			SetEnvSEPlayState(-1, 0)
			FadeOut(FADE_BLACK,FADE_NORMAL)
			WaitFade()
			
			SetFlag( TF_MENU_SELECT, 1 )	
		}
		//	⇒やめる
		else
		{
			
			SetFlag( TF_MENU_SELECT, 0 )
		}
		//──────────────────────

		if( FLAG[TF_MENU_SELECT] == 0 )
		{
			CrossFade(FADE_CROSS)
			SetStopFlag(STOPFLAG_NOCHARACLIP)
			
			ResetPartyPos()
			ResetFollowPoint()
			
			RestoreCamera(0,0)
			ResetCameraObserver(0)
			ResetCameraZPlane()
			Wait(FADE_CROSS)
			
			ResetStopFlag(STOPFLAG_SIMPLEEVENT2)
		}
		else
		{
			LoadArg("map/mp1213/mp1213.arg")
			EventCue("mp1213:Retry_QS_611")
			//FadeIn(FADE_BLACK,FADE_NORMAL)
			WaitFade()
			ResetStopFlag(STOPFLAG_SIMPLEEVENT2)
		}
	}
	else if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Silvia2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// シルヴィア：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_SILVIA] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_03_AFTER_INTERCEPT12] &&		//☆第六部Ｆ迎撃戦⑫を済ませた
		FLAG[GF_LIKELV_SILVIA] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
	//	ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
	//	WaitThread(1000)
	
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("this", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Silvia",0,0,0,0,0)
		{
			"#000e#000mすまないが、アドル。"
			"また稽古に付き合ってもらえるかい？"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Silvia")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// シルヴィア：メインイベント
//
//
////////////////////////////////////////////////////
// シルヴィア：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる
			LookChr("this", "LEADER")
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )		// クエスト用選択肢あり１	【QS611】老いらくの剣（シルヴィア）
			{
				MenuAdd( 2, "【老いらくの剣】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「闘士の鞘」を持った状態でシルヴィアに話しかけると
				//　　以下の選択肢。
				MenuAdd(3,"#326I闘士の鞘を渡す")
			}
			MenuAdd( -1, "やめる15")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Silvia2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 【老いらくの剣】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Silvia_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)		// 闘士の鞘を渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Silvia")
				break
			}
			
			if( FLAG[GF_QS_EVENT_TMP] )	//1:クエストイベント発生
			{
				// イベント発生なら選択肢を抜ける。会話だけなら選択肢ループ。（「話をする」「○○○について」の両方から発生する可能性あり）
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// シルヴィア：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Silvia2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
}
////////////////////////////////////////////////////
// シルヴィア：クエスト会話
function "Talk_Silvia_Quest"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_611] == QUEST_NOTHING || FLAG[GF_QUEST_611] == QUEST_BBS )	// 【QS611】老いらくの剣（シルヴィア）
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		
		LookChr("this", "LEADER")
		
		TalkPopup("Silvia",0,0,0,0,0)
		{
			"#000e#000mなあアドル、ちょっといいかい。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//　　画面暗転を挟んで、浜辺の高台。
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
		//SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		//LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_611_Start")		// 【QS611】老いらくの剣（シルヴィア）	▼クエスト開始イベント
	}
	//▼クエスト達成前
	else
	{
		//──────────────────────────────
		//▼クエスト用会話
		//──────────────────────────────
		//──────────  一般・開始処理  ────────────
		SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
		ResetStopFlag(STOPFLAG_TALK)
		SetStopFlag(STOPFLAG_TALK2)
		//Wait(1)		// 選択肢あり時用
		//───────────────
		//	場所		：浜辺・高台
		//───────────────
		//	配置・カメラ：
		//	モーション	：
		//───────────────
		LookSpd("this", 1.0f, 1.0f, 1.0f)
		LookTo("Silvia", -12.827f , -1514.698f , 9.481f )	// 首を正面に向ける
		CallFunc("talkcam:Silvia_NormalB")		//基本Ｂ
		CallFunc("system:talkevent_begin")		//TALK_BEGIN
		LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
		//───────────────────────────────
		
		//──────────────────────
		//	⇒初戦の場合
		if( !FLAG[GF_QS611_LOSE] )				//【QS611】▼敗北イベント を見た
		{
			TalkPopup("Silvia",0,0,0,0,0)
			{
				"#000e#000mどうだい、アタシとの手合わせに"
				"付き合ってくれるかい？"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		//	⇒再戦の場合
		else
		{
			TalkPopup("Silvia",0,0,0,0,0)
			{
				"#000e#000mふむ、気合いは入れ直して来たかい？"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
		//──────────────────────
		
		//	ナレーション
		TalkPopup(UNDEF,0,3,SYSTEM_PPOSX,SYSTEM_PPOSY,0)
		{
			"#7Cクエストを開始すると、その時の"
			"#7C行動メンバー３人で戦闘を行います。\p"
			"#7Cアドルは必須となりますが、"
			"#7C他の２人の組み合わせは自由です。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//選択肢
		SetFlag(TF_MENU_SELECT,0)
		MenuReset()
		MenuType(MENUTYPE_POPUP)
		MenuAdd(1,"手合わせを始める")
		MenuAdd(2,"やめておく")
		MenuOpen( TF_MENU_SELECT , -1 , ADOLMENU_PPOSY , -2 , -2 , 10 , 0)
		WaitMenu(0)
		MenuClose(10,0)
		
		//──────────────────────
		//	⇒手合わせを始める
		if (FLAG[TF_MENU_SELECT] == 1)
		{
			//	⇒手合わせを始める（アドルが行動メンバーの場合）
			if( IsPartyIn(PARTY_ADOL) )	// アドルが行動メンバー
			{
				TalkPopup("Silvia",0,0,0,0,0)
				{
					"#000e#000mよしきた──"
					"いっちょやろうじゃないか！"
				}
				WaitPrompt()
				WaitCloseWindow()
				
				SetEnvSEPlayState(-1, 0)	//環境SE全停止
				StopBGM(90)
				
				//	  　画面暗転して「戦闘開始イベント」に接続。
				FadeOut(FADE_BLACK,FADE_NORMAL)
				WaitFade()

				SetFlag(SF_NOCHANGEBGM, 1)
				
				SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
				SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
				LoadArg("map/mp1213/mp1213.arg")
				EventCue("mp1213:QS_611_Battle")		// 【QS611】老いらくの剣（シルヴィア）	▼戦闘開始イベント
			}
			//	⇒手合わせを開始する（アドルが行動メンバーでない場合）
			else
			{
				TalkPopup("Silvia",0,0,0,0,0)
				{
					"#000e#000mちょいと待ちな──\p"
					"アドル、お前さんには"
					"必ず参加してもらうからね。\p"
					"改めて声をかけておくれ。"
				}
				WaitPrompt()
				WaitCloseWindow()
			}
		}
		//	⇒やめておく
		else if (FLAG[TF_MENU_SELECT] == 2)
		{
			TalkPopup("Silvia",0,0,0,0,0)
			{
				"#000e#000mそうかい、ならまた都合の"
				"いい時にでも声をかけておくれ。"
			}
			WaitPrompt()
