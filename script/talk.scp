		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_401_Start")		// 【QS401】新入りはいずこ（レーヤ）	▼クエスト開始イベント
	}
	//▼クエスト達成前
	else
	{
		//──────────────────────────────
		//▼クエスト用会話
		//──────────────────────────────
		//　　※「▼第四部①島北部に足を踏み入れた」時のみカメラ切り替え
		if( FLAG[GF_NPC_4_01_GOTO_NORTH] &&	//！☆第四部Ｆ迎撃戦⑦が発生
			!FLAG[GF_NPC_4_01_AFTER_INTERCEPT7] &&
