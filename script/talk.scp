			MenuAdd( -1, "やめる3")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Ed2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 頼まれていた素材を渡す
			{
				//──────────────────────────────
				//▼クエスト達成イベント
				//──────────────────────────────
