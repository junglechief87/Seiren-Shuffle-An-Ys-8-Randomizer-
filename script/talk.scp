			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)	// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Paro2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)	// 大きなクルの実を渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Paro1")
				break
			}
			else if (FLAG[TF_MENU_SELECT] == 3)	// 小さな指輪を渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Paro2")
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// リトル・パロ：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Paro2" )
		ResetStopFlag(STOPFLAG_TALK)
	}

