				//▼クエスト達成イベント
				//──────────────────────────────
				LookChr("this", "LEADER")
				
				//	システムメッセージ
				TalkPopup(UNDEF, 0, 5, 0, 0, 0)
				{
					"#8S"
					"#-1W#4Cアリスンに#2C「#163I分厚い皮」#4C×３を渡した。#10W" 
					"#8S"
				}
				Wait(10)
				WaitPrompt()
				WaitCloseWindow()

				TalkPopup("Alison",0,0,0,0,0)
				{
					"#000e#000mアドルさん──"
