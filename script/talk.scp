// ■会話カシュー
function "Talk_Kashu"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生
	
	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
	if( ALLITEMWORK[ICON3D_PRESENT_KASHU] &&	//「船名プレート」
		FLAG[GF_NPC_5_07_GOTO_VALLAY])			//発生タイミング：▼第五部⑦王家の谷へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	if(( FLAG[GF_QUEST_602] == QUEST_BBS || FLAG[GF_QUEST_602] == QUEST_START ) &&	//【QS602】白酒の調達（カシュー）
		FLAG[GF_NPC_6_03_OCCUR_INTERCEPT12])		// ★第六部Ｆ迎撃戦⑫が発生（セレンの園到着後）
	{
		//「▼第六部②ジャンダルム頂上へ向かう」を過ぎた後
		//　【白酒の調達】について		＞「▼クエスト用会話」に接続			※手帳に依頼が登録済み＆「▼第六部②ジャンダルム頂上へ向かう」を過ぎた後に出現
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
	}
	if( FLAG[GF_QUEST_602] == QUEST_START &&	// 【QS602】白酒の調達（カシュー）
		ALLITEMWORK[ICON3D_FERMENTATION_SAP] >= 3 )	// 	『発酵樹液』×３を持っている
	{
		//　『発酵樹液』×３を渡す		＞「▼クエスト達成イベント」に接続		※依頼を開始済み＆素材を持っていると出現
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Kashu2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// カシュー：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_KASHU] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_02_GOTO_GEND] &&				//▼第六部②ジャンダルム頂上へ向かう
		FLAG[GF_LIKELV_KASHU] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
	//	ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
	//	WaitThread(1000)
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("this", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Kashu",0,0,0,0,0)
		{
			"#000e#000mそうだアドル……"
			"ちょっと付き合ってくれないか？\p"
			"脱出船もほぼ完成だけど、"
			"仕#2R・#R上#2R・#Rげ#2R・#Rに必要なものがあるんだ。"	//（仕上げを・で強調）
		}
		WaitPrompt()
		WaitCloseWindow()

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Kashu")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// カシュー：メインイベント
//
//
////////////////////////////////////////////////////
// カシュー：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if( ( FLAG[GF_NPC_5_07_GOTO_VALLAY] && !FLAG[GF_NPC_5_08_MEET_DANA] )||										//▼第五部⑦王家の谷へ向かう
				( FLAG[GF_NPC_5_05_BEFORE_INTERCEPT10] && !FLAG[GF_NPC_5_06_HOLD_PARTY] &&	!FLAG[TF_KASHU_TALK] )||	//☆第五部⑤迎撃戦⑩（対オケアノス）が発生
				( FLAG[GF_NPC_5_03_AFTER_INTERCEPT9] && !FLAG[GF_NPC_5_04_GOTO_HOLLOW] &&	!FLAG[TF_KASHU_TALK] )||	//☆第五部Ｆ迎撃戦⑨を済ませた
				( FLAG[GF_NPC_5_04_GOTO_HOLLOW] && !FLAG[GF_NPC_5_05_BEFORE_INTERCEPT10] &&	!FLAG[TF_KASHU_TALK] ) )	//▼第五部④大空洞へ向かう
			{
				//▼第五部⑦王家の谷へ向かう　は振り向かない
				//	☆第五部⑤迎撃戦⑩（対オケアノス）が発生　初回会話　は振り向かない
				//▼第五部④大空洞へ向かう　共通初回会話　は振り向かない
				//	☆第五部Ｆ迎撃戦⑨を済ませた　共通初回会話　は振り向かない
			}
			else if( ( FLAG[GF_NPC_5_02_GOTO_BAHA] && !FLAG[GF_NPC_5_02_GOTO_LOOKOUT] &&		!FLAG[TF_KASHU_TALK] )||	//▼第五部②バハの塔に向かう
					 ( FLAG[GF_NPC_0_02_START_PATROL] && !FLAG[GF_NPC_0_03_ATTACK_SHIP] &&		!FLAG[GF_00MP0012_GO_CAPTAINROOM2] && !FLAG[TF_KASHU_TALK] ) )	//▼序②船内を巡回する（夜）
			{
				//▼第五部②バハの塔に向かう　初回会話　は振り向かない
				//▼序②船内を巡回する（夜）　※カシューとすれ違うイベント前　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			//　●ムーブ系足制御
			if( FLAG[GF_NPC_0_02_START_PATROL] && !FLAG[GF_NPC_0_03_ATTACK_SHIP] && FLAG[GF_00MP0012_GO_CAPTAINROOM2] )	//▼序②船内を巡回する（夜）
			{
				//▼序②船内を巡回する（夜）　※カシューとすれ違うイベント後		歩いているので足を止める
				ResetMoveVec("this")
				ChangeAnimation( "this", "ANI_WAIT", -1, 1 )	// 待機
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x10 )		// クエスト用選択肢あり１	【QS602】白酒の調達（カシュー）
			{
				MenuAdd( 2, "【白酒の調達】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )		// クエスト用選択肢あり２	【QS602】白酒の調達（カシュー）
			{
				MenuAdd( 3, "#343I発酵樹液×３を渡す")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「船名プレート」を持った状態でカシューに話しかけると
				//　　以下の選択肢。
				MenuAdd(4,"#333I船名プレートを渡す")
			}
			MenuAdd( -1, "やめる5")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Kashu2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 【白酒の調達】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Kashu_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)		// 『発酵樹液』×３を渡す
			{
				//──────────────────────────────
				//▼クエスト達成イベント
				//──────────────────────────────
				LookChr("this", "LEADER")
				
				//　　カシューにＰＡエモーション
				EmotionEx("Kashu", 0.00f, EMO_PA, 0, 5, 1, 1, 1.0f)	//パッ
				Wait(50)
				
				TalkPopup("Kashu",0,0,0,0,0)
				{
					"#000e#000mアドル……もしかして"
