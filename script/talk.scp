// ドギ：クエスト会話
function "Talk_Dogi_Quest1"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	//クエスト開始前
	if( FLAG[GF_QUEST_201] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		
		LookChr("this", "LEADER")
		
		TalkPopup("Dogi",0,0,0,0,0)
		{
			"#000e#000mお、依頼を受けてくれるのか？\p"
			"そんじゃ、改めて説明させてもらうぜ。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//　　画面暗転を挟んで、倉庫前。
		
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		if(FLAG[GF_02MP1202_GET_CLOTHES] && !FLAG[GF_02MP1201_TAKE_BREAKFAST]		//ドギが料理を説明する
			 || FLAG[GF_02MP1201_LOST_CURRAN] && !FLAG[GF_02MP1201_LOOK_CURRAN]		//カーランを発見する
			 || FLAG[GF_02MP1201_START_HEARING] && !FLAG[GF_02MP1201_LOOK_MAN]		//サハドが人影を発見する
			 || FLAG[GF_03MP1202_AWAKE_ADOL] && !FLAG[GF_03MP1201_GOTO_GENSD]		//ジャンダルムへ向かうことになる
			 || FLAG[GF_07MP1201_CHECK_VILLAGE] )									//ＥＤⅢ 《はじまりの深淵》突破
		{
			LoadArg("map/mp1201t3/mp1201t3.arg")
		}
		else
		{
			LoadArg("map/mp1201/mp1201.arg")
		}
		EventCue("mp1201:QS_201_Start")		// 【QS201】備蓄用の素材（ドギ）	▼クエスト開始イベント
	}
	//クエスト中
	else
	{
		//──────────────────────────────
		//▼クエスト用会話
		//──────────────────────────────
		//　　※カメラ切り替えなし
		
		LookChr("this", "LEADER")
		
		//──────────────────────
		//	⇒『軽い骨』×８／『濁った粘液』×１２を持っている
		if( ALLITEMWORK[ICON3D_MT_N1_BONE] >= 8 &&		//「軽い骨」
		    ALLITEMWORK[ICON3D_MT_N1_LIQUID] >= 12 )		//「濁った粘液」
		{
			TalkPopup("Dogi",0,0,0,0,0)
			{
				"#000e#000mお、どうやら頼んでた素材が"
				"集まったようだな。"
			}
			WaitPrompt()
			WaitCloseWindow()
			
			//選択肢
			SetFlag(TF_MENU_SELECT,0)
			MenuReset()
			MenuType(MENUTYPE_POPUP)
			MenuAdd(1,"頼まれていた獣素材を渡す")
			MenuAdd(2,"やめておく")
			MenuOpen( TF_MENU_SELECT , -1 , ADOLMENU_PPOSY , -2 , -2 , 10 , 0)
			WaitMenu(0)
			MenuClose(10,0)
//			Wait(20)
			
			//──────────────────────
			//	⇒頼まれていた獣素材を渡す
			if (FLAG[TF_MENU_SELECT] == 1)
			{
				TalkPopup("Dogi",0,0,0,0,0)
				{
					"#000e#000mへへっ、助かるぜ。\p"
					"それじゃあ改めて、"
					"倉庫の整理をするか。"
				}
				WaitPrompt()
				WaitCloseWindow()
				
				//	  　画面暗転して「クエスト達成イベント」に接続。
				
				FadeOut(FADE_BLACK,FADE_NORMAL)
				WaitFade()
				
				SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
				SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

				if(FLAG[GF_02MP1202_GET_CLOTHES] && !FLAG[GF_02MP1201_TAKE_BREAKFAST]		//ドギが料理を説明する
					 || FLAG[GF_02MP1201_LOST_CURRAN] && !FLAG[GF_02MP1201_LOOK_CURRAN]		//カーランを発見する
					 || FLAG[GF_02MP1201_START_HEARING] && !FLAG[GF_02MP1201_LOOK_MAN]		//サハドが人影を発見する
					 || FLAG[GF_03MP1202_AWAKE_ADOL] && !FLAG[GF_03MP1201_GOTO_GENSD]		//ジャンダルムへ向かうことになる
					 || FLAG[GF_07MP1201_CHECK_VILLAGE] )									//ＥＤⅢ 《はじまりの深淵》突破
				{
					LoadArg("map/mp1201t3/mp1201t3.arg")
				}
				else
				{
					LoadArg("map/mp1201/mp1201.arg")
				}

				EventCue("mp1201:QS_201_Complete")		// 【QS201】備蓄用の素材（ドギ）	▼クエスト達成イベント
			}
			//	⇒やめておく
			else if (FLAG[TF_MENU_SELECT] == 2)
			{
				TalkPopup("Dogi",0,0,0,0,0)
				{
					"#000e#000mおっと、他に"
					"使う見込みでもあったのか？\p"
					"まあいい、改めて"
					"用意できたら持って来てくれ。"
				}
				WaitPrompt()
				WaitCloseWindow()
			}
			//──────────────────────
		}
		//	⇒持っていない
		else
		{
			TalkPopup("Dogi",0,0,0,0,0)
			{
				"#000e#000m必要なのは『濁った粘液』が１２、"
				//"#000e#000m必要なのは#2C#166I濁った粘液#0Cが１２、"
