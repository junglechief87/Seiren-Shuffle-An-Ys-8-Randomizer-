			MenuReset()
			MenuAdd( 0 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x01 )	// ショップあり
			{
				MenuAdd( 1 , "仕立てをする")
			}
			if( FLAG[TF_TALK_TYPE] & 0x10 )	// クエスト用選択肢あり１	【QS222】仕立ての練習（アリスン）
			{
				MenuAdd( 2, "【仕立ての練習】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )	// クエスト用選択肢あり２	【QS222】仕立ての練習（アリスン）
			{
				MenuAdd( 3, "#163I分厚い皮×３を渡す")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「精巧な縫い針」を持った状態でアリスンに話しかけると
