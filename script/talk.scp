// ■会話サハド
function "Talk_Sahad"
{
	//会話ループ抜けフラグを下ろす（★パッチ1.01対応）
	SetFlag( GF_QS_EVENT_TMP, 0 )				//1:クエストイベント発生

	// 会話条件をチェック
	SetFlag( TF_TALK_TYPE, 0 )
//	if( FLAG[GF_NPC_2_01_SEARCH_BARBAROSS] )	//▼第二部①バルバロス船長を探しに行く				->「釣りの評価」はなくなりました
//	{
//		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x01 ) )	// 0x01:ショップあり
//	}
	if( ALLITEMWORK[ICON3D_PRESENT_SAHAD1] &&	//「大漁旗」
	//	FLAG[GF_NPC_3_02_GOTO_GENSD] )			// 発生タイミング：▼第三部②ジャンダルムに向かう
		FLAG[GF_NPC_3_01_GOTO_LAXIA] )			// 発生タイミング：▼第三部①ラクシャの元へ向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	else if( ALLITEMWORK[ICON3D_PRESENT_SAHAD2] &&	//「碧玉の真珠」
		FLAG[GF_NPC_5_02_GOTO_BAHA] )				// 発生タイミング：▼第五部②バハの塔に向かう
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x02 ) )	// 0x02:プレゼントアイテムあり
	}
	
	if(( FLAG[GF_QUEST_300] == QUEST_BBS || FLAG[GF_QUEST_300] == QUEST_START ) &&
		FLAG[GF_NPC_3_02_OCCUR_INTERCEPT5] )	//☆第三部Ｆ迎撃戦⑤が発生
		//FLAG[GF_NPC_3_02_GOTO_GENSD])
	{
		//「▼第三部②ジャンダルムに向かう」を過ぎた後
		//　【祈願の木】について			＞初回は「▼クエスト開始イベント」／それ以降「▼クエスト用会話」／祈願の木入手後は「▼クエスト達成イベント」に接続		※手帳に依頼が登録済み＆「▼第三部②ジャンダルムに向かう」を過ぎた後に出現
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
	}

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] && !FLAG[GF_NPC_7_03_CHECK_VILLAGE] ))			// ▼エピローグ①寺院前へ向かう ～！▼エピローグ③漂流村を最後に見回る
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Sahad2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// サハド：メインイベント
	else if( FLAG[GF_07MP1201_CHECK_VILLAGE] ){		// エピローグ：ＥＤⅢ セイレン島を脱出する
		//▼エピローグ③漂流村を最後に見回る
		//　　※話しかけると以下の選択肢が出る
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			LookChr("this", "LEADER")
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 0 , "話をする")
			MenuAdd( 1 , "船を出す")
			MenuAdd( -1, "やめる12")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 0)			// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Sahad2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 1)		// 船を出す
			{
				FadeOut(FADE_BLACK,FADE_NORMAL)
				WaitFade()
				SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
				EventCue("mp1201:EV_M07S120")
				break
			}
		}
		ResetStopFlag(STOPFLAG_TALK)
	} 
	else if( FLAG[GF_NPC_2B_07_CURRAN_LOST] && !FLAG[GF_NPC_2B_08_HEARING_START] &&
			 FLAG[GF_SUBEV_1203_CHECK_ROPE] ){	
		EventCue("mp1201:EV_M02S520")
	}
	else if( FLAG[GF_02MP1202_GET_CLOTHES] && !FLAG[GF_02MP1201_TALK_DOGISAHAD] ){		// 探索用の服をもらった
		EventCue("mp1201:EV_M02S020")
	} 
////////////////////////////////////////////////////
// サハド：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_SAHAD] &&			// 親愛イベントを見た
		FLAG[GF_NPC_6_02_GOTO_GEND] &&				//▼第六部②ジャンダルム頂上へ向かう
		FLAG[GF_SUBEV_PRESENT_SAHAD1] &&			// プレゼント1を渡した（サハド）
		FLAG[GF_SUBEV_PRESENT_SAHAD2])			// プレゼント2を渡した（サハド）
	{
		SetStopFlag(STOPFLAG_TALK)
		//ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
		//WaitThread(1000)
		
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("this", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Sahad",0,0,0,0,0)
		{
			"#000e#000mおお、そういやさっき"
			"とびきりウマそうな大物が釣れてな。\p"
			"こんな時だがハラが減ってちゃ、"
			"戦はできねーだろ。\p"
			"アドル、お前さんも"
			"腹ごしらえしていかねーか。"
		}
		WaitPrompt()
		WaitCloseWindow()

		StopBGM(120)
		SetFlag(SF_NOCHANGEBGM, 1)
		SetEnvSEPlayState(-1, 0)	//環境SE全停止

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Sahad")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// サハド：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if( ( FLAG[GF_NPC_6_03_AFTER_INTERCEPT12] && !FLAG[GF_NPC_6_04_GET_MISTILTEINN] &&	FLAG[TF_SAHAD_TALK] )||		//☆第六部Ｆ迎撃戦⑫を済ませた
				( FLAG[GF_NPC_6_02_GOTO_GEND] && !FLAG[GF_NPC_6_03_GOTO_GARDEN] &&				!FLAG[TF_SAHAD_TALK] )||	//▼第六部②ジャンダルム頂上へ向かう
				( FLAG[GF_NPC_5_04_GOTO_HOLLOW] && !FLAG[GF_NPC_5_05_BEFORE_INTERCEPT10] &&		!FLAG[TF_SAHAD_TALK] )||	//▼第五部④大空洞へ向かう
				( FLAG[GF_NPC_5_03_AFTER_INTERCEPT9] && !FLAG[GF_NPC_5_04_GOTO_HOLLOW] &&		!FLAG[TF_SAHAD_TALK] )||	//☆第五部Ｆ迎撃戦⑨を済ませた
				( FLAG[GF_NPC_3_04_ALARM_INTERCEPT] && !FLAG[GF_NPC_3_05_BACK_GENSD] &&			!FLAG[TF_SAHAD_TALK] ) )	//★第三部④迎撃戦⑥が発生
			{
				//	☆第六部Ｆ迎撃戦⑫を済ませた　繰り返し　は振り向かない
				//▼第六部②ジャンダルム頂上へ向かう　初回会話　は振り向かない
				//▼第五部④大空洞へ向かう　初回会話　は振り向かない
				//	☆第五部Ｆ迎撃戦⑨を済ませた　初回会話　は振り向かない
				//	★第三部④迎撃戦⑥が発生　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_3_02_AFTER_INTERCEPT5] && !FLAG[GF_NPC_3_03_JOIN_RICOTTA] &&		!FLAG[TF_SAHAD_TALK] )||			//☆第三部Ｆ迎撃戦⑤を済ませた
					( FLAG[GF_NPC_3_01_GOTO_LAXIA] && !FLAG[GF_NPC_3_02_GOTO_GENSD] &&				FLAG[GF_1STTALK_3_01_SAHAD] )||		//▼第三部①ラクシャの元へ向かう
					( FLAG[GF_NPC_2_14_LOST_CURRAN] && !FLAG[GF_NPC_2_15_START_HEARING] &&			!FLAG[TF_SAHAD_TALK] )||			//▼第二部⑭カーラン卿を探しに行く
					( FLAG[GF_NPC_2_10_OCCUR_INTERCEPT2] && !FLAG[GF_NPC_2_10_AFTER_INTERCEPT2] &&	FLAG[TF_SAHAD_TALK] ) )				//☆第二部Ｆ迎撃戦②が発生
			{
				//	☆第三部Ｆ迎撃戦⑤を済ませた　初回会話　は振り向かない
				//▼第三部①ラクシャの元へ向かう　ＧＦ繰り返し　は振り向かない
				//▼第二部⑭カーラン卿を探しに行く　初回会話　は振り向かない
				//	☆第二部Ｆ迎撃戦②が発生　繰り返し　は振り向かない
			}
			else if(( FLAG[GF_NPC_2_03_REMOVE_OBSTACLE] && !FLAG[GF_NPC_2_04_JOIN_ALISON] &&		!FLAG[GF_1STTALK_2_03_LAXIA] )||	//▼第二部③障害物を撤去した（碧の珊瑚礁）
					( FLAG[GF_NPC_0_02_START_PATROL] && !FLAG[GF_NPC_0_03_ATTACK_SHIP] )||												//▼序②船内を巡回する（夜）
					( FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] && !FLAG[GF_NPC_5_03_OCCUR_INTERCEPT9] &&		!FLAG[TF_SAHAD_TALK] )||			//▼第五部③幽霊船を調べに向かう
					( FLAG[GF_NPC_3_03_JOIN_RICOTTA] && !FLAG[GF_NPC_3_04_ALARM_INTERCEPT] &&		!FLAG[TF_SAHAD_TALK] ) )			//▼第三部③リコッタが仲間になった
			{
				//▼第二部③障害物を撤去した（碧の珊瑚礁）　ＧＦ初回会話　は振り向かない
				//▼序②船内を巡回する（夜）　は振り向かない
				//▼第五部③幽霊船を調べに向かう　初回会話　は振り向かない
				//▼第三部③リコッタが仲間になった　初回会話　は振り向かない

			}
			else
			{
				LookChr("this", "LEADER")
