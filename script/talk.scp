				WaitPrompt()
				WaitCloseWindow()
				
				TalkPopup("Ed",0,0,0,0,0)
				{
					"#000e#000mありがとう、これでようやく"
					"産衣を完成させることができるよ。\p"
					"よし、さっそく仕上げるとしよう！"
				}
				WaitPrompt()
				WaitCloseWindow()
				
				SetEnvSEPlayState(-1, 0)	//環境SE全停止
				
				//　　画面フェードアウト。
				FadeOut(FADE_BLACK,FADE_NORMAL)
				WaitFade()
				
				SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
