	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_501] == QUEST_NOTHING || FLAG[GF_QUEST_501] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		LookChr("this", "LEADER")
		
