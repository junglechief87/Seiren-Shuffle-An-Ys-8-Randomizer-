		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Paro",0,0,0,0,0)
		{
			"#000e#000m#5Cオレサマ、ウミイク。"
			"#5Cオレサマ、ウミミル。"
		}
		WaitPrompt()
		WaitCloseWindow()

		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Paro")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// リトル・パロ：メインイベント
//
//
////////////////////////////////////////////////////
// リトル・パロ：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）	//if文が長すぎるとエラーが出てしまうので、分割してあります
			if( ( FLAG[GF_NPC_5_04_GOTO_HOLLOW] && !FLAG[GF_NPC_5_05_BEFORE_INTERCEPT10] &&			!FLAG[TF_PARO_TALK] )||		//▼第五部④大空洞へ向かう
				( FLAG[GF_NPC_3_02_OCCUR_INTERCEPT5] && !FLAG[GF_NPC_3_02_AFTER_INTERCEPT5] &&		!FLAG[TF_PARO_TALK] )||		//☆第三部Ｆ迎撃戦⑤が発生
				( FLAG[GF_NPC_3_02_GOTO_GENSD] && !FLAG[GF_NPC_3_02_OCCUR_INTERCEPT5] &&			!FLAG[TF_PARO_TALK] )||		//▼第三部②ジャンダルムに向かう
				( FLAG[GF_NPC_3_01_GOTO_LAXIA] && !FLAG[GF_NPC_3_02_GOTO_GENSD] &&					!FLAG[TF_PARO_TALK] ) )		//▼第三部①ラクシャの元へ向かう
			{
				//▼第五部④大空洞へ向かう　初回共通会話　は振り向かない
				//	☆第三部Ｆ迎撃戦⑤が発生　初回会話　は振り向かない
				//▼第三部②ジャンダルムに向かう　初回会話　は振り向かない
				//▼第三部①ラクシャの元へ向かう　初回会話　は振り向かない
			}
			else if(( FLAG[GF_NPC_2_11_OCCUR_INTERCEPT3] && !FLAG[GF_NPC_2_11_AFTER_INTERCEPT3] &&		!FLAG[TF_PARO_TALK] ))	//☆第二部Ｆ迎撃戦③が発生
			{
				//	☆第二部Ｆ迎撃戦③が発生　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				if( ALLITEMWORK[ICON3D_PRESENT_PARO1] &&	//「大きなクルの実」
					FLAG[GF_NPC_3_02_GOTO_GENSD] )			// 発生タイミング：▼第三部②ジャンダルムに向かう
				{
					//──────────────────────────────
					//▼プレゼントイベント１
					//──────────────────────────────
					//　　「大きなクルの実」を持った状態でリトル・パロに話しかけると
					//　　以下の選択肢。
					MenuAdd(2,"#333I大きなタネを渡す")
				}
				if( ALLITEMWORK[ICON3D_PRESENT_PARO2]	//「小さな指輪」
				&& FLAG[GF_SUBEV_PRESENT_PARO]			// プレゼントイベント1を見た（リトル・パロ）
				&& FLAG[GF_NPC_5_04_GOTO_HOLLOW] )		// 発生タイミング：▼第五部④大空洞へ向かう
				{
					//──────────────────────────────
					//▼プレゼントイベント２
					//──────────────────────────────
					//　　「小さな指輪」を持った状態でリトル・パロに話しかけると
