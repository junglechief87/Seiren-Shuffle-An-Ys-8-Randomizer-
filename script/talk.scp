// シスター・ニア：クエスト会話
function "Talk_Nia_Quest"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	//▼クエスト達成前

	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_311] == QUEST_NOTHING || FLAG[GF_QUEST_311] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		
		LookChr("this", "LEADER")
		
		TalkPopup("Nia",0,0,0,0,0)
		{
			"#000e#000mあ、アドルさん。\p "
			"いつも島の探索、お疲れ様です。"
			"その……\p"
			"……少しお話を"
			"聞いていただいてよろしいですか？"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		SetEnvSEPlayState(-1, 0)	//環境SE全停止
		
		//　　画面暗転を挟んで、中央上段の高台。
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_311_Start")		// 【QS311】神に祈りを（シスター・ニア）	▼クエスト開始イベント
	}
	// 「▼クエスト用会話」
	else
	{
		//──────────────────────────────
		//▼クエスト用会話
		//──────────────────────────────
		//　　※「▼第三部⑤再びジャンダルムに向かう」時のみカメラ切り替え
		
		if( FLAG[GF_NPC_3_05_BACK_GENSD] &&			//▼第三部⑤再びジャンダルムに向かう
			!FLAG[GF_NPC_4_01_GOTO_NORTH] )			//▼第四部①島北部に足を踏み入れた
		{
			//──────────  一般・開始処理  ────────────
			SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
			ResetStopFlag(STOPFLAG_TALK)
			SetStopFlag(STOPFLAG_TALK2)
			//Wait(1)		// 選択肢あり時用
			//───────────────
			//	場所		：中央上段・高台
			//───────────────
			//	配置・カメラ：
			//	モーション	：
			//───────────────
			SaveCamera()
			ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
			SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
			RollCamera( 0 , 0.0f , 0 )		// ロール回転
			MoveCameraAt( 0 , -3.236f , -1476.509f , 26.198f , 0 )	// 注視点
			MoveCamera( 0 , -3.161f , -1476.021f , 26.291f , 0 )		// 視点
			
			//キャラ初期動作の記述
			LookSpd("this", 1.0f, 1.0f, 1.0f)
			LookTo("Nia", -3.161f , -1476.021f , 26.291f )	// 首を正面に向ける
			Turn("Nia", -156.33f, 360.0f )
			CallFunc("system:talkevent_begin")		//TALK_BEGIN
			LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
			//───────────────────────────────
		}
		else
		{
			//　　※カメラ切り替えなし
			LookChr("this", "LEADER")
		}

		TalkPopup("Nia",0,0,0,0,0)
		{
			"#000e#000mどうしても、"
			"風見丘陵の頂上へ行きたいのです。\p"
			"どうかわたしを"
			"案内していただけないでしょうか？"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//	ナレーション
		TalkPopup(UNDEF,0,3,SYSTEM_PPOSX,SYSTEM_PPOSY,0)
		{
			"#7Cクエストを開始すると、"
			"#7C風見丘陵の麓まで移動します。\p"
			"#7Cそこから頂上を目指し、"
			"#7Cアドル一人の状態で"
			"#7Cシスター・ニアを護衛します。\p"
			"#7C準備を整えたら、"
			"#7Cシスター・ニアに話しかけてください。"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		//選択肢
		SetFlag(TF_MENU_SELECT,0)
		MenuReset()
		MenuType(MENUTYPE_POPUP)
		MenuAdd(1,"風見丘陵に向かう")
		MenuAdd(2,"やめておく")
		MenuOpen( TF_MENU_SELECT , -1 , ADOLMENU_PPOSY , -2 , -2 , 10 , 0)
		WaitMenu(0)
		MenuClose(10,0)
		
		//──────────────────────
		//	⇒護衛を開始する
		if (FLAG[TF_MENU_SELECT] == 1)
		{
			TalkPopup("Nia",0,0,0,0,0)
			{
				"#000e#000mアドルさん……"
				"どうもありがとうございます。"
			}
			WaitPrompt()
			WaitCloseWindow()
			
			SetEnvSEPlayState(-1, 0)	//環境SE全停止
			StopBGM(90)

			//	  　画面暗転して「護衛開始イベント」に接続。
			FadeOut(FADE_BLACK,FADE_NORMAL)
			WaitFade()
			
			if( FLAG[GF_NPC_3_05_BACK_GENSD] &&			//▼第三部⑤再びジャンダルムに向かう
				!FLAG[GF_NPC_4_01_GOTO_NORTH] )			//▼第四部①島北部に足を踏み入れた
			{
				ResetStopFlag(STOPFLAG_TALK2)
				SetStopFlag(STOPFLAG_TALK)
				SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
				CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			}
			
			SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
			SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
			LoadArg("map/mp3101/mp3101.arg")
			EventCue("mp3101:QS_311_Escort")		// 【QS311】神に祈りを（シスター・ニア）	▼護衛開始イベント
		}
		//	⇒やめておく
		else if (FLAG[TF_MENU_SELECT] == 2)
		{
			TalkPopup("Nia",0,0,0,0,0)
			{
				"#000e#000mそうですか……残念です。"
			}
			WaitPrompt()
			WaitCloseWindow()
			
			if( FLAG[GF_NPC_3_05_BACK_GENSD] &&			//▼第三部⑤再びジャンダルムに向かう
				!FLAG[GF_NPC_4_01_GOTO_NORTH] )			//▼第四部①島北部に足を踏み入れた
			{
				Turn("Nia", 1.89f, 360.0f )		//向きリセット
				CallFunc("system:talkevent_end")		//TALK_END
				SetStopFlag(STOPFLAG_TALK)
				SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
				CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			}
		}
		//──────────────────────
	}
}
