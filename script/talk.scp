		//Wait(1)		// 選択肢あり時用
		//───────────────
		//	場所		：中央下段・調理場
		//───────────────
		//	配置・カメラ：ミラルダ基本Ａ
		//	モーション	：
		//───────────────
		LookSpd("this", 1.0f, 1.0f, 1.0f)
		LookTo("Miralda", 21.455f , -1440.119f , 13.070f )	// 首を正面に向ける
		CallFunc("talkcam:Miralda_NormalA")		//基本Ａ
		CallFunc("system:talkevent_begin")		//TALK_BEGIN
		LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
		//───────────────────────────────
	}
	else
	{
		//　　★繰り返し
		//　　※カメラ切り替えなし
		LookChr("this", "LEADER")
	}

	if( !FLAG[TF_MIRALDA_QS_TALK] )
	{
		TalkPopup("Miralda",0,0,0,0,0)
		{
			"#000e#000mアドル君。"
			"私のお願いを聞いてくれる？\p"
			"#011e#000m最近、古代種を筆頭に"
			"強い獣が多くなってきたけど……\p"
			"#012e#000m彼らから取れる『始原肉』は"
			//"#012e#000m彼らから取れる#2C#272I始原肉#0Cは"
			"引き締まっていてとっても美味しいのよね。\p"
			"#011e#000mでも漂流村の周辺だと、"
			"なかなか手に入れることができなくて……\p"
			"#012e#080mというわけで、どうか『始原肉』を"
			//"#012e#080mというわけで、どうか#2C#272I始原肉#0Cを"
			"３つほど調達して貰えないかしら。\p"
			"#021e#080mそしたらお礼に、栄養満点の肉料理を"
			"振舞ってあげるわよ㈱"
		}
		WaitPrompt()
		WaitCloseWindow()

		//──────────────────────
		//	⇒依頼が冒険日誌に未登録の場合
		if( FLAG[GF_QUEST_402] == QUEST_NOTHING )
		{
			PlaySE(SE_QUEST_ADD, 100, 0, 0, 0, 1.0f, 0)		// クエスト追加
			//	システムメッセージ
			TalkPopup(UNDEF,0,5,0,0,0)
			{
				"#-1W#4C冒険日誌のクエストページに    "
				"#-1W#4Cクエスト#8C【栄養満点の肉料理】#4Cが追加された。#10W"
			}
			Wait(10)
			WaitPrompt()
			WaitCloseWindow()
			
			//	  　※ミラルダにクエストマーカーを付ける。
			
			SetFlag( GF_QUEST_402, QUEST_BBS )		// 【QS402】栄養満点の肉料理（ミラルダ）　クエスト確認
			
			// この時点で必要なアイテムを持っていたら「○○を渡す」を選択肢に追加する
			if( ALLITEMWORK[ICON3D_FD_MEAT_03] >= 3 )	// 【QS402】栄養満点の肉料理（ミラルダ） 「始原肉」×３を持っている
			{
				SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
			}
			
			CallFunc("system:SetMarkerNPC")		//ＮＰＣマーカーセット
		}
		//──────────────────────
	}
	else
	{
		//　　★繰り返し
		//　　※カメラ切り替えなし
		LookChr("this", "LEADER")
	
		TalkPopup("Miralda",0,0,0,0,0)
		{
			"#000e#000mアドル君、どうか『始原肉』を"
			//"#000e#000mアドル君、どうか#2C#272I始原肉#0Cを"
			"３つほど調達して来て貰えないかしら。\p"
			"そしたらお礼に、栄養満点の肉料理を"
			"振舞ってあげるわよ㈱"
		}
		WaitPrompt()
		WaitCloseWindow()
	}

	if( FLAG[GF_NPC_4_01_GOTO_NORTH] &&			//▼第四部①島北部に足を踏み入れた
		!FLAG[GF_NPC_4_01_OCCUR_INTERCEPT7] &&	//☆第四部Ｆ迎撃戦⑦が発生
		!FLAG[TF_MIRALDA_QS_TALK] )
	{
		Turn("Miralda", 93.61f, 360.0f )		//向きリセット
		CallFunc("system:talkevent_end")		//TALK_END
		SetStopFlag(STOPFLAG_TALK)
		SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	}
	SetFlag( TF_MIRALDA_QS_TALK, 1 )
}
