				} else {
					SetFlag(GF_ADD_AR_028,0)		//【QS500】ドギのクエストを逃したら掘り出し物に並ぶ
				}				

				// ショップ処理
				ShopOpen( SHOP_ID_TRADE, -1 )		// ディナの交易所
			}
			else if (FLAG[TF_MENU_SELECT] == 2)	// ショップ
			{
				// ショップ処理
				ShopOpen( SHOP_ID_TRADE_SELL, -1 )		// 交易所・引取り
