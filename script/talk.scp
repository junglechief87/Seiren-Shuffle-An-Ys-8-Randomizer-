			SaveCamera()
			ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
			SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
			RollCamera( 0 , 0.0f , 0 )		// ロール回転
			MoveCameraAt( 0 , 9.543f , -1418.473f , 18.246f , 0 )	// 注視点
			MoveCamera( 0 , 9.902f , -1417.888f , 18.381f , 0 )		// 視点
			
