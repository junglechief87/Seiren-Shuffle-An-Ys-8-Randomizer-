		if (FLAG[GF_NPC_4_01_AFTER_INTERCEPT7] || FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8])//☆第四部Ｆ迎撃戦⑦を済ませた||★第五部①迎撃戦⑧が発生
		{
			//　【栄養満点の肉料理】について	＞「▼クエスト用会話」に接続			※「▼第四部①島北部に足を踏み入れた」を過ぎた後に出現
			SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x10 ) )	// 0x10:クエスト用選択肢あり１
		}
	}
	if(( FLAG[GF_QUEST_402] == QUEST_BBS || FLAG[GF_QUEST_402] == QUEST_START ) &&
		 ALLITEMWORK[ICON3D_FD_MEAT_03] >= 3 )	// 【QS402】栄養満点の肉料理（ミラルダ） 「始原肉」×３を持っている
	{
		SetFlag( TF_TALK_TYPE, ( FLAG[TF_TALK_TYPE] + 0x20 ) )	// 0x20:クエスト用選択肢あり２
	}

////////////////////////////////////////////////////
// 会話選択肢が出ないタイミング
//	・▼第二部⑫カーラン卿の悲鳴を聞いた　のタイミング
//	・▽第二部⑱バルバロスが致命傷を負った（浜辺）のタイミング
//	・「▼中庭でダーナに出会う(mpXXXX)」のタイミング
//	・▽第五部見張り台に向かう　のタイミング
//	・▼第五部⑥宴の漂流村を散策（夜）　のタイミング
//	・エピローグ以降
	if( ( FLAG[GF_02MP1202_HEAR_SHOUT] && !FLAG[GF_02MP1201_BEFORE_INTERCEPT2] )||	// 叫び声を聞いた～！迎撃戦の準備をはじめた
		( FLAG[GF_02MP1111_WOUND_BARBAROSS] && !FLAG[GF_03MP6410M_HEAR_TREE] )||	// バルバロスが致命傷を負う～！ダーナ編①	植樹祭の説明を受ける
		( FLAG[GF_NPC_4_02_SEE_THANATOS] && !FLAG[GF_NPC_5_01_BEFORE_INTERCEPT8] && FLAG[TF_MP6409_NOW] )||	// ▼第四部②タナトスと出会った～！★第五部①迎撃戦⑧が発生	かつ、mp6409にいる間
		( FLAG[GF_NPC_5_02_GOTO_LOOKOUT] && !FLAG[GF_NPC_5_03_GOTO_GHOSTHIP] )||	// ▽第五部見張り台に向かう～！▼第五部③幽霊船を調べに向かう
		( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] )||		// ▼第五部⑥宴の漂流村を散策（夜）～！▼第五部⑦王家の谷へ向かう
		( FLAG[GF_NPC_7_01_GOTO_TEM] ))												// ▼エピローグ①寺院前へ向かう
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Miralda2" )
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// ミラルダ：親愛イベント
// 親愛イベントの条件が成立している場合は、親愛イベントを即起動する
	//──────────────────────────────
	//▼親愛イベント
	//──────────────────────────────
	else if( !FLAG[GF_SUBEV_SINAI_MIRALDA] &&			// 親愛イベントを見た
		FLAG[GF_NPC_5_02_GOTO_BAHA] &&				//▼第五部②バハの塔に向かう
		FLAG[GF_LIKELV_MIRALDA] >= 2 )
	{
		SetStopFlag(STOPFLAG_TALK)
		//ExecuteCmd(1000, TurnToChr, "this", "LEADER", 8.0f )	// 操作キャラに向かせる
		//WaitThread(1000)
		ChangeAnimation( "ADOL", "ANI_WAIT", -1, 1 )	// 待機
		LookChr("this", "LEADER")
		
		//　　好感度ＭＡＸの状態で話しかけると、
		//　　カメラ切り替えなしで以下のメッセージ。

		TalkPopup("Miralda",0,0,0,0,0)
		{
			"#000e#000mアドル君、ちょっと"
			"お願いがあるんだけどいいかしら？"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット

		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:Sinai_Miralda")
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// ミラルダ：メインイベント

	else if( FLAG[GF_02MP1202_GET_CLOTHES] && !FLAG[GF_SUBEV_HELP_VEGG] )	//野菜ジュース導入イベント
	{
		EventCue("talk:SubEV_Help_Veggies")
		ResetStopFlag(STOPFLAG_TALK)
	}
	
////////////////////////////////////////////////////
// ミラルダ：選択肢表示
// 会話選択肢時はwhileでループする
	else if( FLAG[TF_TALK_TYPE] > 0 )
	{
		SetStopFlag(STOPFLAG_TALK)
		SetFlag(TF_MENU_SELECT,0)
		while( FLAG[TF_MENU_SELECT] >= 0 )	//選択肢ループ
		{
			// 話しかけると、カメラズームしながら選択肢が出る
			CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
			
			// 首だけ振り向かせる処理（振り向き禁止時は振り向かない）
			if( ( FLAG[GF_NPC_7_03_CHECK_VILLAGE] &&									!FLAG[TF_MIRALDA_TALK] )||	//▼エピローグ③漂流村を最後に見回る
				( FLAG[GF_NPC_5_06_HOLD_PARTY] && !FLAG[GF_NPC_5_07_GOTO_VALLAY] &&		!FLAG[TF_MIRALDA_TALK] ) )	//▼第五部⑥宴の漂流村を散策（夜）
			{
				//▼エピローグ③漂流村を最後に見回る　の　初回会話　は振り向かない
				//▼第五部⑥宴の漂流村を散策（夜）　の　初回会話　は振り向かない
			}
			else
			{
				LookChr("this", "LEADER")
			}
			
			// 選択肢作成
			MenuReset()
			MenuAdd( 1 , "話をする")
			if( FLAG[TF_TALK_TYPE] & 0x40 )		// ショップ選択肢
			{
				MenuAdd( 5, "ジュースを作る")
			}
			if( FLAG[TF_TALK_TYPE] & 0x10 )		// クエスト用選択肢あり１	【QS402】栄養満点の肉料理（ミラルダ）
			{
				MenuAdd( 2, "【栄養満点の肉料理】について")
			}
			if( FLAG[TF_TALK_TYPE] & 0x20 )		// クエスト用選択肢あり２	【QS402】栄養満点の肉料理（ミラルダ）
			{
				MenuAdd( 3, "#272I始原肉×３を渡す")
			}
			if( FLAG[TF_TALK_TYPE] & 0x02 )	// プレゼントアイテムあり
			{
				//──────────────────────────────
				//▼プレゼントイベント
				//──────────────────────────────
				//　　「究理の包丁」を持った状態でミラルダに話しかけると
				//　　以下の選択肢。
				MenuAdd(4,"#326I究理の包丁を渡す")
			}
			MenuAdd( -1, "やめる23")
			MenuType(MENUTYPE_POPUP)
			MenuOpen( TF_MENU_SELECT, -1, 200, -1, -2, 10, 1 )		//一般会話用設定
			WaitMenu(0)
			MenuClose(10,0)
			
			if (FLAG[TF_MENU_SELECT] == 1)	// 話す
			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Miralda2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)		// 【栄養満点の肉料理】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Miralda_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)		// 『始原肉』×３を渡す
			{
				//──────────────────────────────
				//▼クエスト達成イベント
				//──────────────────────────────
				LookChr("this", "LEADER")
				
				//	システムメッセージ
				TalkPopup(UNDEF, 0, 5, 0, 0, 0)
				{
					"#8S"
					"#-1W#4Cミラルダに#2C「#272I始原肉」×３#4Cを渡した。#10W"
					"#8S"
				}
				Wait(10)
				WaitPrompt()
				WaitCloseWindow()

				TalkPopup("Miralda",0,0,0,0,0)
				{
					"#000e#000mあら、嬉しいわ！"
					"本当に持って来てくれたのね。\p"
					"ふふ、それじゃあさっそく"
					"新しいレシピを披露しちゃおうかしら。"
				}
				WaitPrompt()
				WaitCloseWindow()
				
				//　　暗転を挟んで、調理場の前。
				FadeOut(FADE_BLACK,FADE_NORMAL)
				WaitFade()
				
				SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
				LoadArg("map/mp1201/mp1201.arg")
				EventCue("mp1201:QS_402_Complete")		// 【QS402】栄養満点の肉料理（ミラルダ）	▼クエスト達成イベント
				break
			}
			else if (FLAG[TF_MENU_SELECT] == 4)	// 究理の包丁を渡す
			{
				// プレゼント処理
				ResetStopFlag(STOPFLAG_TALK)
				CallFunc("talk:Present_Miralda")
				break
			}
			else if (FLAG[TF_MENU_SELECT] == 5)	// ショップ
			{
				// ショップ処理
				ShopOpen( SHOP_ID_JUICE, -1 )		// ジュース
			}

			if( FLAG[GF_QS_EVENT_TMP] )	//1:クエストイベント発生
			{
				// イベント発生なら選択肢を抜ける。会話だけなら選択肢ループ。（「話をする」「○○○について」の両方から発生する可能性あり）
				break
			}
		}
		
		ResetStopFlag(STOPFLAG_TALK)
	}
////////////////////////////////////////////////////
// ミラルダ：通常会話
	else
	{
		// 会話処理
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
		CallFunc( "talk:Talk_Miralda2" )
		ResetStopFlag(STOPFLAG_TALK)
	}

	CallFunc( "talk:Talk_Miralda_LookReset" )		//向きリセット処理
}
