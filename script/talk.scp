	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	//▼クエスト達成前

	if( FLAG[GF_NPC_3_02_GOTO_GENSD] &&			//▼第三部②ジャンダルムに向かう
		!FLAG[GF_NPC_3_02_OCCUR_INTERCEPT5] &&	//☆第三部Ｆ迎撃戦⑤が発生
		!FLAG[TF_LICHT_QS_TALK] )
	{
		//　　※「▼第三部②ジャンダルムに向かう」時のみカメラ切り替え
		//──────────  一般・開始処理  ────────────
		SetFlag( TF_TALK_ZOOMNOINTERPOLATE, 1 )	//ZOOMCAMERAに関する補間処理を一瞬で終わらせる
		ResetStopFlag(STOPFLAG_TALK)
		SetStopFlag(STOPFLAG_TALK2)
		//Wait(1)		// 選択肢あり時用
		//───────────────
		//	場所		：中央下段・診療所
		//───────────────
		//	配置・カメラ：リヒト基本Ａ（診療所）
		//	モーション	：座る
		//───────────────
		LookSpd("this", 1.0f, 1.0f, 1.0f)
		LookTo("Licht", 19.055f , -1430.183f , 13.150f )	// 首を正面に向ける
		ChangeSubAnimation("Licht",SUBMOT_EXT1,ANI_E_LOOKR,1)
		CallFunc("talkcam:Licht_NormalA")			//基本Ａ（診療所）
		CallFunc("system:talkevent_begin")		//TALK_BEGIN
		LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
		//───────────────────────────────
	}
	else
	{
		//　　★繰り返し
		//　　※カメラ切り替えなし
		LookChr("this", "LEADER")
	}

	if( !FLAG[TF_LICHT_QS_TALK] )
	{
		TalkPopup("Licht",0,0,0,0,0)
		{
			"#000e#000mあ……アドルさん。\p"
			"#011e#000m実はその、ある薬の調合を"
			"試してみようと思っていまして……\p"
			"#012e#000m調薬難易度がかなり高いのですが、"
			"古代種もまたいつ現れるか……\p"
			"そう思うと、できるだけの事は"
			"しておきたいのです。\p"
			"必要な材料は、『煌く粘液』と"
			//"必要な材料は、#2C#168I煌く粘液#0Cと"
			"『輝く葉』が１つずつとなります……\p"
			//"#2C#176I輝く葉#0Cが１つずつとなります……\p"
			"もし手に入ったら"
			"ご一報頂けないでしょうか。"
		}
		WaitPrompt()
		WaitCloseWindow()

		//──────────────────────
		//	⇒依頼が冒険日誌に未登録の場合
		if( FLAG[GF_QUEST_301] == QUEST_NOTHING )
		{
			PlaySE(SE_QUEST_ADD, 100, 0, 0, 0, 1.0f, 0)		// クエスト追加
			//	システムメッセージ
			TalkPopup(UNDEF,0,5,0,0,0)
			{
				"#-1W#4C冒険日誌のクエストページに     "
				"#-1W#4Cクエスト#8C【新しい薬の調合】#4Cが追加された。#10W"
			}
			Wait(10)
			WaitPrompt()
			WaitCloseWindow()
			
			//	  　※リヒトにクエストマーカーを付ける。
			
			SetFlag( GF_QUEST_301, QUEST_BBS )		// 【QS301】新しい薬の調合（リヒト）　クエスト確認
			
