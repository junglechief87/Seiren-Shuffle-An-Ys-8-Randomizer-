			{
				// 会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Austen2" )
			}
			else if (FLAG[TF_MENU_SELECT] == 2)	// 【奮起の演奏会】について
			{
				// クエスト会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Austen_Quest" )
			}
			else if (FLAG[TF_MENU_SELECT] == 3)	// 《ロケーションポイント》について
			{
				// やり込み会話処理
				LookReset( "this" )
				CallFunc( "talk:Talk_Speedrun_Austen" )
			}
			else if (FLAG[TF_MENU_SELECT] == 4)	// 『蒼き豊穣の楽譜』を渡す
			{
				//──────────────────────────────
				//▼クエスト達成イベント
