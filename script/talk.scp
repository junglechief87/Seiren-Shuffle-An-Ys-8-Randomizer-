function "Talk_Speedrun_Thanatos"
{
	//▼海賊のメモを揃えてタナトスに渡す
	//　　海賊のメモ①～⑥を持っている状態で
	//　　タナトスに話しかけると以下の処理。
	//　　カメラをとらない一般会話処理で行う。

	SetStopFlag(STOPFLAG_TALK)
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	
	LookChr("this", "LEADER")

	//　　タナトスにＰＡエモーション
	EmotionEx("Thanatos", 0.00f, EMO_PA, 0, 5, 1, 1, 1.0f)	//パッ
	Wait(50)

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mおや？　アドルよ。"
		"海賊のメモを持っているようじゃな。\p"
		"ワシも以前、海賊の足取りを"
		"調べていた事があってな。\p"
		"それは参考になりそうじゃ。"
		"よければ譲ってはくれまいか？"
	}
	WaitPrompt()
	WaitCloseWindow()

	//選択肢
	SetFlag(TF_MENU_SELECT,0)
	MenuReset()
	MenuType(MENUTYPE_POPUP)
	MenuAdd(1,"もちろんです")
	MenuAdd(2,"何か分かりそうですか？")
	MenuOpen( TF_MENU_SELECT , -1 , ADOLMENU_PPOSY , -2 , -2 , 10 , 0)
	WaitMenu(0)
	MenuClose(10,0)
	Wait(10)
	
	//────────────────────
	//	⇒もちろんです
	if (FLAG[TF_MENU_SELECT] == 1)
	{
		TalkPopup("Thanatos",0,0,0,0,0)
		{
			"#000e#000mうむ、感謝するぞ。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//	⇒何か分かりそうですか？
	else if (FLAG[TF_MENU_SELECT] == 2)
	{
		TalkPopup("Thanatos",0,0,0,0,0)
		{
			"#000e#000mうむ、つき合わせれば"
			"当時の状況がつかめそうじゃ。"
		}
		WaitPrompt()
		WaitCloseWindow()
	}
	//────────────────────

	TalkPopup("Thanatos",0,0,0,0,0)
	{
		"#000e#000mリードの航海日誌にもあったが……"
		"海賊たちも相当な辛酸を舐めたようじゃな。\p"
		"だが彼らの遺した海図のお陰で"
		"ワシらは光明を掴めたというわけだ。\p"
		"連中の苦労を無駄にせんためにも、"
		"しっかりやり遂げるとしようじゃないか。"
	}
	WaitPrompt()
	WaitCloseWindow()

	//　　アドル頷いて暗転。
	HeadYes("ADOL" , 1 , 25)
	Wait(20)

	FadeOut(FADE_BLACK,FADE_NORMAL)
	WaitFade()

	//	ナレーション
	TalkPopup(UNDEF,0,3,SYSTEM_PPOSX,SYSTEM_PPOSY,0)
	{
		"#7Cタナトスの言葉に、"
		"#7Cアドルもしっかりと頷き返すのだった。"
	}
	WaitPrompt()
	WaitCloseWindow()

	//　　報酬を貰う場合は暗転中に差し込む。

	//	テキスト
	GetItemMessageExPlus( ICON3D_US_ADD_SP, 1 , ITEMMSG_SE_BETTER , "を手に入れた。" , 0 , 0 )
	WaitPrompt()
	WaitCloseWindow()
	GetItem(ICON3D_US_ADD_SP,1)		//鬼神の霊香
	SetFlag( GF_FAME_POINT, (FLAG[GF_FAME_POINT] + 2) )			//やり込み：海賊のメモコンプ	名声値+2

	//海賊のメモの回収
	DeleteItem( ICON3D_MEMO_P_001, 999 )	//	海賊のメモ①
	DeleteItem( ICON3D_MEMO_P_002, 999 )	//	海賊のメモ②
	DeleteItem( ICON3D_MEMO_P_003, 999 )	//	海賊のメモ③
	DeleteItem( ICON3D_MEMO_P_004, 999 )	//	海賊のメモ④
	DeleteItem( ICON3D_MEMO_P_005, 999 )	//	海賊のメモ⑤
	DeleteItem( ICON3D_MEMO_P_006, 999 )	//	海賊のメモ⑥

	SetFlag( GF_SUBEV_MEMO_P_TALK, 1 )	// 「▼タナトスに海賊のメモについて聞く」が発生しないようにフラグを立てる

	//　　フェードインして操作許可を戻す。
	FadeIn(FADE_BLACK,FADE_NORMAL)
	WaitFade()

