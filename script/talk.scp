// サハド：クエスト会話
function "Talk_Sahad_Quest"
{
	SetFlag( GF_QS_EVENT_TMP, 0 )	//1:クエストイベント発生

	//▼クエスト達成前

	// クエスト未登録か登録後の開始前
	if( FLAG[GF_QUEST_300] == QUEST_NOTHING || FLAG[GF_QUEST_300] == QUEST_BBS )
	{
		//──────────────────────────────
		//▼クエスト開始イベント
		//──────────────────────────────
		//　　※最初はカメラ切り替えなし
		
		LookChr("this", "LEADER")

		TalkPopup("Sahad",0,0,0,0,0)
		{
			"#000e#000mお？　アドル。"
			"ワシの話を聞いてくれるか？"
		}
		WaitPrompt()
		WaitCloseWindow()

		//　　画面暗転を挟んで、集落中央マップ、農場からの坂を下った辺りの広場。
		
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_300_Start")		// 【QS300】祈願の木（サハド）	▼クエスト開始イベント
	}
	// 祈願の木入手後は「▼クエスト達成イベント」に接続
	else if( FLAG[GF_QUEST_300] == QUEST_START && FLAG[GF_QS300_GET_TREE] )
	{
		//──────────────────────────────
		//▼クエスト達成イベント
		//──────────────────────────────
		
		LookChr("this", "LEADER")
		
		TalkPopup("Sahad",0,0,0,0,0)
		{
			"#000e#000mおお、木を植えるのを"
			"手伝ってくれるか？"
		}
		WaitPrompt()
		WaitCloseWindow()
		
		SetEnvSEPlayState(-1, 0)	//環境SE全停止
		//　　画面暗転。
		FadeOut(FADE_BLACK,FADE_NORMAL)
		WaitFade()
		
		SetFlag( GF_QS_EVENT_TMP, 1 )		//1:クエストイベント発生
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		LoadArg("map/mp1201/mp1201.arg")
		EventCue("mp1201:QS_300_Complete")		// 【QS300】祈願の木（サハド）	▼クエスト達成イベント
		SetEnvSEPlayState(-1, 0)	//環境SE全停止
	}
	// 「▼クエスト用会話」
	else
	{
		//──────────────────────────────
		//▼クエスト用会話
		//──────────────────────────────
		//　　※「▼第三部②ジャンダルムに向かう」時のみカメラ切り替え
		
		if( FLAG[GF_NPC_3_02_GOTO_GENSD] &&			//▼第三部②ジャンダルムに向かう
