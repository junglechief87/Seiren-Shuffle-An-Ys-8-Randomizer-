			//Wait(1)		// 選択肢あり時用
			//───────────────
			//	場所		：中央上段・その他
			//───────────────
			//	配置・カメラ：★専用／フランツ「▼第六部②ジャンダルム頂上へ向かう」
			//				  8.78f	-1419.15f	16.52f	-81.18f
			//	モーション	：
			//───────────────
			SaveCamera()
			ChangeCameraPers( 0 , 60.000f , 0 )	// 視野角
			SetCameraZPlane( 0.100f , 300.000f )	// ZPlane
			RollCamera( 0 , 0.0f , 0 )		// ロール回転
			MoveCameraAt( 0 , 8.893f , -1418.571f , 18.062f , 0 )	// 注視点
			MoveCamera( 0 , 8.820f , -1417.876f , 18.064f , 0 )		// 視点
			// ResetCameraZPlane()	// イベント終了時に呼び出して下さい。マップ側の設定に戻します。

			
			//キャラ初期動作の記述
			LookSpd("this", 1.0f, 1.0f, 1.0f)
			LookTo("Franz", 8.820f , -1417.876f , 18.064f )	// 首を正面に向ける
			Turn("Franz",-166.45f,360.0f)
			ChangeSubAnimation("this",SUBMOT_EYE,ANI_E_CLOSE,1)
			ChangeSubAnimation("this",SUBMOT_MOUTH,ANI_M_SMILE,1)
			CallFunc("system:talkevent_begin")		//TALK_BEGIN
			LookSpd("this", LOOKSPD_DEFAULT, LOOKSPD_DEFAULT, LOOKSPD_DEFAULT)
			//───────────────────────────────
		}
		else
