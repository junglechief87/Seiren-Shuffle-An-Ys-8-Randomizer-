function "act_0509"
{
	if (!FLAG[GF_AVOICE_0509])
	{
		EventAreaEnable( "evb2_act_0509" , 0 )
		ActiveVoiceStop(ACTIVEVOICESTOP_WINDOWOFF)
		ActiveVoiceStart(EACT_EVID_0509, 1, 0)	//上層攻略開始
	}
}


