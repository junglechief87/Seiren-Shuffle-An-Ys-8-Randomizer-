//──────────────────────────────
//	【衛士】
//──────────────────────────────
function "Talk_Soldier_3_G01"
{
	SetStopFlag(STOPFLAG_TALK)
	CallFunc("system:talk_begin_zoom")		//TALK_ZOOM

	if( FLAG[GF_PAST_EPISODE_3_GO_BAHA] )			//▼過去編Ⅲバハの塔へ向かう
	{
		//▼過去編Ⅲバハの塔へ向かう
		//───────────────
		//	場所		：王都東門内（過去）・門の近く
		//───────────────
		//	配置・カメラ：門を出てすぐ見える位置
		//	モーション	：
		//───────────────
		if( !FLAG[TF_TALK_MOB01] )
		{
			//　　振り返らない
			//	衛士
			TalkPopup("this",0,0,0,0,0)
			{
				"申し訳ないが、通行は"
				"我々の指示に従ってください。"
			}
			WaitPrompt()
			WaitCloseWindow()

			//　　ＰＡエモーションで振り向く
			EmotionEx("this", 0.05f, EMO_PA, 0, 5, 1, 1, 2.0f )	// 「PA」
			Wait(30)
			LookChr("this","LEADER")

			//	衛士
			TalkPopup("this",0,0,0,0,0)
			{
				"巫女様……混雑しておりまして"
				"大変申し訳ございません。\p"
				"街道はしばらく通行を"
				"制限しておりまして……\p"
				"ご不便をお掛けいたします。"
				"どうか今しばらくお待ち頂けると。"
			}
			WaitPrompt()
			WaitCloseWindow()
			SetFlag( TF_TALK_MOB01, 1 )
		}
		else
		{
			//　　★繰り返し
			//　　※カメラ切り替えなし

			LookChr("this","LEADER")

			//	衛士
			TalkPopup("this",0,0,0,0,0)
			{
				"混雑しておりまして"
				"大変申し訳ございません。\p2"
				"街道はしばらく通行を2"
				"制限しておりまして……\p2"
				"どうか今しばらくお待ち頂けると。2"
			}
			WaitPrompt()
			WaitCloseWindow()
		}
	}

	ResetStopFlag(STOPFLAG_TALK)
}


