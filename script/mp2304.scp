		SetStopFlag(STOPFLAG_AUTOMESSAGE)
	
		// ポートレートリリース
		Portrait_Close(-1)
		Portrait_Unload(-1)
	
	}
	// ================================================================================================

	SetFlag( GF_HELP_A31, 1 )	// チュートリアル：浮き靴の効果

	ResetStopFlag(STOPFLAG_EVENT)

}



