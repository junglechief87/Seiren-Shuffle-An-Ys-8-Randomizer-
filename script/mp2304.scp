	MoveCameraAt( 0 , 105.630f , 102.100f , 2.924f , 0 )	// 注視点
	ChangeCameraDistance( 0 , 7.000f , 0 )		// 基本距離
	ChangeCameraElevation( 0 , 6.000f , 0 )	// 基本仰角
