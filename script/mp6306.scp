	// 被写界深度の設定
	SetDoF(0, LERP_LINEAR, 5.000, 180.000, 2.000, 0.550, 0.500)					//イベント毎に調整

	//カメラ終点
	ExecuteCmd(1001, MoveCameraAt, INTERPOLATE_SPHERE , -8.616f , -0.044f , 0.802f, 140 )		// 注視点
