	function "SubEV_Boss_Start_ED"
	{
	SetStopFlag(STOPFLAG_CINEMA)
	SetStopFlag(STOPFLAG_EVENT)
	FadeOut(FADE_BLACK,FADE_FAST)
	
	//終了処理はスキップ禁止
	SetSkipScript("")

