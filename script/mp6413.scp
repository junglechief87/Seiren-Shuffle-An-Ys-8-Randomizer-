	//MapAnime("asiba","off")	//逃げられないストッパー起動
	//MapAnime("syswall","close")		//逃げられないストッパー：起動◆仮入力
	MapAnime("CT_BOSS", "wait2")	//ボスマップの空気アタリ：起動

