function "act_0504"
{
	if (!FLAG[GF_AVOICE_0504])
	{
		EventAreaEnable( "evb2_act_0504" , 0 )
		ActiveVoiceStop(ACTIVEVOICESTOP_WINDOWOFF)
		ActiveVoiceStart(EACT_EVID_0504, 1, 0)	//動物を助ける分岐道にきたら
	}
}
