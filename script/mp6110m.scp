function "Talk_Sika"
{

	if( FLAG[GF_SUBEV_PAST_03_GIMMICK_A] < 2 )	// 過去編Ⅲ：【過去ギミック③：動物を助ける】を見た（1:見た、2:竜樹の宝果をあげた）
	{
		
		SetFlag( TF_LOADING_TIPS_OFF, 1 )	//NowLoading 時の Tips 表示をカット
		EventCue("mp6110m:SubEV_Past_03_Gimmick_A")		//【過去ギミック③：動物を助ける】
		ResetStopFlag(STOPFLAG_TALK)
	}
	else
	{
		//【過去ギミック③：動物を助ける】
		//　　※イベント後、動物に話しかけると以下の一般メッセージ。
	
		SetStopFlag(STOPFLAG_TALK)
		CallFunc("system:talk_begin_zoom")		//TALK_ZOOM
	
		//　　動物は首をダーナに向け、懐いたような鳴き声がする。
		LookChr("Sika", "LEADER")
		
		PlaySE(SE_KAKO_3_07, 100, 0, 0, 0, 1.0f, 0)		//
		Wait(30)

		TalkPopup("LEADER",0,0,0,0,0)
		{
			"#000e#000mうん、怪我は大丈夫そうかな。\p"
			"また様子を見に来るね。"
			"あなたに大樹の恵みがあらん事を。"
		}
		WaitPrompt()
		WaitCloseWindow()
	
		ResetStopFlag(STOPFLAG_TALK)
	}

}

