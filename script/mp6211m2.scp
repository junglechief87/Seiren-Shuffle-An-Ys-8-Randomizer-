function "init"
{
	if (FLAG[SF_EVENT_ON]){

		EntryOn(02,0)		//地下聖堂のエントリーは初期状態OFF

		//一般配置ファンクション呼び出し
		CallFunc("mp6211m:NpcPosition")

		// イベント発生制御
		if( FLAG[GF_PAST_EPISODE_7_ENDEPISODE] )		//▼過去編Ⅶエンドエピソード
		{
			if(FLAG[GF_SUBEV_PAST_07_TALK_IO] && !FLAG[GF_SUBEV_PAST_07_INTO_6211])		// 過去編Ⅶ：▼イオと再会する　を見た
			{
				EventCue("mp6211m2:SubEV_Past_07_Main040")
			}
			if(FLAG[GF_SUBEV_PAST_07_INTO_6211])
			{
				MapAnime("gim_step","open")
				EntryOn(02,1)
			}
		}
		//エントリー制御
		if( FLAG[GF_PAST_EPISODE_6_GO_GARDEN] )			//▼過去編Ⅵセレンの園へ向かう
		{
				//※エタニア崩壊後は、以下のエントリーの有効、無効を切り替えてください
				//00⇒無効
				//01⇒無効
				//02⇒有効
				//03⇒有効

			EntryOn(00,0)
			EntryOn(01,0)
			EntryOn(02,1)
			EntryOn(03,1)
		}
	}
}

